;-------------------------------------------------
;TALENT:ARG:外見年齢に体型などによる補正を加えたもの
;-------------------------------------------------
@AGE(ARG)
#FUNCTION

SELECTCASE CFLAG:ARG:外見年齢
	CASE IS < 13
		;ロリ
		LOCAL = 1
	CASE IS < 16
		;厨
		LOCAL = 2
	CASE IS < 19
		;お姉さん
		LOCAL = 3
	CASEELSE
		;オトナ
		LOCAL = 4
ENDSELECT

IF NO:ARG
	;もともとは小柄キャラではない
	SIF IS_小柄(ARG) && CSVTALENT(NO:ARG, GETNUM(TALENT, "身長") ) >= 0
		LOCAL -= 1
ENDIF

IF TALENT:ARG:オトコの娘
	LOCAL = LIMIT(LOCAL, 1, 2)
ELSE
	LOCAL = LIMIT(LOCAL, 1, 4)
ENDIF

RETURNF LOCAL


;-------------------------------------------------
;ARGを(ARG:1 / 100)倍する
;ARG = MULTIPLY(ARG, 150)　は　TIMES ARG, 1.50　と等しい。
;ARG:2はARG:1の最大値
;-------------------------------------------------
@MULTIPLY(ARG, ARG:1, ARG:2)
#FUNCTION
;0以下の数をかけたときには ARG:1 = 0 とする
SELECTCASE ARG:1
	CASE IS <= 0
		RETURNF 0
	CASE IS > ARG:2
		SIF ARG:2 > 0
			ARG:1 = ARG:2
ENDSELECT
RETURNF ARG * ARG:1 / 100


