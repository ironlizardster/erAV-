	TEMP_STR = 「キミが、歌音ちゃんのコレね？」
	CALL HTML_PRINT_P(TEMP_STR,"CENTER")

	TEMP_STR = %@"小指をぴん、と立てながら謎の少女は興味深そうに%CALLNAME:MASTER%を舐めるように見回している<br>"%
	TEMP_STR += @"%CALLNAME:MASTER%は得も知れない『圧力』に生唾をごくりと飲みながら、ゆっくりと頷いた<br>"
	CALL HTML_PRINT_P(TEMP_STR)

	TEMP_STR = %@"%CALLNAME:MASTER%の『歌音の姉妹ですか？』という問いかけに、少女は可愛らしい仕草でくすり、と笑いながら"%
	TEMP_STR += "少女……桐生エレンはこう言った<br>"
	CALL HTML_PRINT_P(TEMP_STR)

	TEMP_STR = 「パパさんとは話したことがあるけど、あたしとはまだだったよね？<br>
	TEMP_STR += "あたしは桐生エレン……桐生組の『組長派』の長で、歌音ちゃんのママをやってます♪」<br>"
	CALL HTML_PRINT_P(TEMP_STR,"CENTER")

	TEMP_STR = 「ふんふん、なるほどー……歌音ちゃんが惚れるのも訳ないわよね<br>
	TEMP_STR += "あの娘、ああ見えて"
	IF NO:MASTER == [[キャラ:あなた]]
		TEMP_STR += "年下好き"
