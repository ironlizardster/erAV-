; 実績の達成条件
@ACHIEVEMENT_CALC_17
; 条件を満たす人数の計算
LOCAL = 0
FOR COUNT, 0, CHARANUM
	SIF COUNT == MASTER
		CONTINUE
	SIF (NO:COUNT == [[キャラ:雛見春乃]] || NO:COUNT == [[キャラ:雛見まゆ]] || NO:COUNT == [[キャラ:羽瀬川みこと]]) && TALENT:COUNT:処女 == 0 && TALENT:COUNT:アナル処女 == 0 && TALENT:COUNT:絶倫 == 1 && PBAND:135 >= 3 && PBAND:144 >= 3 			
		LOCAL++
NEXT
; 条件を達成している場合は実績番号のグローバルを1にする
IF GLOBAL:17 == 0 && DIFFICULTY_CHECK() && LOCAL == 3
	GLOBAL:17 = 1
	SAVEGLOBAL
ENDIF
RETURN GLOBAL:17

