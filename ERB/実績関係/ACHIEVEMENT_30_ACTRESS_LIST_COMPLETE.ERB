@ACHIEVEMENT_CALC_30
; 条件を満たす人数の計算
VARSET LOCAL, 0
FOR LOCAL, 0, 固有キャラ最大ID
	;CSVが存在しない場合ははじく
	SIF !EXISTCSV(LOCAL, 0)
		CONTINUE
	SIF LOCAL == MASTER
		CONTINUE
	;条件満たした番号をリストに登録
	LOCAL:1++
	SIF 女優名鑑:LOCAL
		LOCAL:2++
NEXT


; 条件を達成している場合は実績番号のグローバルを1にする
IF !GLOBAL:30 && DIFFICULTY_CHECK() && LOCAL:2 == LOCAL:1
	GLOBAL:30 = 1
	SAVEGLOBAL
ENDIF

RETURN GLOBAL:30

