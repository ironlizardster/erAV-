@ACHIEVEMENT_CALC_18
; 条件を満たす人数の計算
LOCAL = 0
FOR COUNT, 0, CHARANUM
	SIF COUNT == MASTER
		CONTINUE
	SIF TALENT:COUNT:ふたなり == 1 && ABL:COUNT:射精中毒 >= 3 && TALENT:COUNT:童貞 == 0
