; 実績のタイトル
@ACHIEVEMENT_TITLE_14
RESULTS = ＢＩＧ３

; 実績の達成条件
@ACHIEVEMENT_CALC_14
; 条件を満たす人数の計算
LOCAL = 0
FOR COUNT, 0, CHARANUM
	SIF COUNT == MASTER
		CONTINUE
	SIF (NO:COUNT == [[キャラ:レイチェル・パラディスス]] || NO:COUNT == [[キャラ:桐生歌音]] || NO:COUNT == [[キャラ:須野郁美]]) && TALENT:COUNT:永遠の愛 == 1
		LOCAL++
NEXT
; 条件を達成している場合は実績番号のグローバルを1にする
IF GLOBAL:14 == 0 && DIFFICULTY_CHECK() && LOCAL == 3
	GLOBAL:14 = 1
	SAVEGLOBAL
ENDIF
RETURN GLOBAL:14

; 実績の説明および諸々の処理
@ACHIEVEMENT_MAIN_14
; 解説文
