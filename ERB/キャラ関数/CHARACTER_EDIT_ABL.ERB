@CHARACTER_EDIT_UI_ABL(対象)
#DIM 対象
LOCAL:1 = 0
FOR LOCAL, 0, VARSIZE("ABL")
	SIF ABLNAME:(LOCAL) == ""
		CONTINUE
	PRINTBUTTON @"% "[" + ABLNAME:LOCAL + "]" , 15, LEFT%:", LOCAL

	PRINTFORM  {ABL:対象:LOCAL, 4, RIGHT} 
	LOCAL:1 ++
	SIF LOCAL:1 != 0 && LOCAL:1 % 5 == 0
		PRINTL
NEXT
PRINTL

@CHARACTER_EDIT_INPUT_ABL(対象, 入力値)
#DIM 対象
#DIM 入力値

SIF !INRANGE(入力値, 0, VARSIZE("ABL") - 1) || ABLNAME:(入力値) == ""
	RETURN 0

PRINTFORML 値を入力 現在値{ABL:対象:入力値} 
PRINTFORML %ABLNAME:入力値%を編集中 0～10)

INPUT

RESULT = LIMIT(RESULT, 0, 10)

ABL:対象:入力値 = RESULT
