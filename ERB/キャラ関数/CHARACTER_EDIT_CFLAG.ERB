@CHARACTER_EDIT_UI_CFLAG(対象)
#DIM 対象
LOCAL:1 = 0
FOR LOCAL, 0, VARSIZE("CFLAG")
	SIF CFLAGNAME:LOCAL == ""
		CONTINUE
	PRINTBUTTON @"% "[" + CFLAGNAME:LOCAL + "]" , 30, LEFT%:", LOCAL

	PRINTFORM  {CFLAG:対象:LOCAL, 5, RIGHT} 
	LOCAL:1 ++
	SIF LOCAL:1 != 0 && LOCAL:1 % 4 == 0
		PRINTL
NEXT
PRINTL

@CHARACTER_EDIT_INPUT_CFLAG(対象, 入力値)
#DIM 対象
#DIM 入力値

SIF !INRANGE(入力値, 0, VARSIZE("CFLAG") - 1)
	RETURN 0

PRINTFORML 値を入力 現在値{CFLAG:対象:入力値} 
PRINTFORML (%CFLAGNAME:入力値%を編集中)

INPUT

SIF RESULT >= 0
	CFLAG:対象:入力値 = RESULT
