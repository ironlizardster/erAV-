;-------------------------------------------------
;アナル舐め
;愛撫系コマンド：調教者が調教対象のアナルを口で刺激
;-------------------------------------------------
@COM9

PRINTL アナル舐め
SAVESTR:0 = アナル舐め
CALL TRAIN_MESSAGE_B

;アナル舐め

;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
LOSEBASE:体力 += 5
LOSEBASE:気力 += 50

SOURCE:愛液分泌 = 50
SOURCE:露出 = 300
SOURCE:逸脱 = 500

;ABL:Ａ感覚をみる
IF ABL:Ａ感覚 == 0
	SOURCE:快Ａ = 5
ELSEIF ABL:Ａ感覚 == 1
	SOURCE:快Ａ = 50
ELSEIF ABL:Ａ感覚 == 2
	SOURCE:快Ａ = 200
ELSEIF ABL:Ａ感覚 == 3
	SOURCE:快Ａ = 500
ELSEIF ABL:Ａ感覚 == 4
	SOURCE:快Ａ = 1000
ELSE
	SOURCE:快Ａ = 1800
ENDIF

;獣姦の場合はここで終了
IF TEQUIP:獣姦プレイ
	EXP:Ａ経験 += 1
	PRINTL Ａ経験＋１
	RETURN 1
ENDIF

;調教者のTALENT:舌使いをみる
IF TALENT:PLAYER:舌使い || TEQUIP:獣姦プレイ
	TIMES SOURCE:快Ａ , 2.00
	SOURCE:恭順 += SOURCE:快Ｃ/20
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＡ⇔調教者の口の汚れが移動
STAIN:4 |= STAIN:PLAYER:0
STAIN:PLAYER:0 |= STAIN:4

;-------------------------------------------------
;経験上昇
;-------------------------------------------------
;レズ・ホモ経験
IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTS EXPNAME:[[EXP:レズ経験]]
	PRINTL +3
	EXP:レズ経験 += 3
ENDIF

EXP:Ａ経験 += 1
PRINTL Ａ経験＋１

;初キス
TFLAG:620 |= 1
TFLAG:620 |= 4

RETURN 1
