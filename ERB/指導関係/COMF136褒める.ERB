;-------------------------------------------------
;褒める
;愛撫系コマンド：調教者が調教対象を褒める
;-------------------------------------------------
@COM136

PRINTL 褒める

SAVESTR:0 = 褒める
CALL TRAIN_MESSAGE_B

;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
LOSEBASE:体力 += 5
LOSEBASE:気力 += 50


;ABL:奉仕精神をみる
IF ABL:奉仕精神 == 0
	SOURCE:性行動 = 50
	SOURCE:達成 = 10
	TIMES SOURCE:不潔 , 4.00
ELSEIF ABL:奉仕精神 == 1
	SOURCE:性行動 = 150
	SOURCE:達成 = 50
	TIMES SOURCE:不潔 , 2.50
ELSEIF ABL:奉仕精神 == 2
	SOURCE:性行動 = 200
	SOURCE:達成 = 100
	TIMES SOURCE:不潔 , 1.50
ELSEIF ABL:奉仕精神 == 3
	SOURCE:性行動 = 250
	SOURCE:達成 = 180
	TIMES SOURCE:不潔 , 1.00
ELSEIF ABL:奉仕精神 == 4
	SOURCE:性行動 = 300
	SOURCE:達成 = 300
	TIMES SOURCE:不潔 , 0.50
ELSE
	SOURCE:性行動 = 350
	SOURCE:達成 = 500
	TIMES SOURCE:不潔 , 0.10
ENDIF
;	RETURN 1
;ENDIF

;TALENT:愛をみる
SIF TALENT:恋心
	TIMES SOURCE:情愛 , 2.00

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷の口⇔調教者の口の汚れが移動
STAIN:口 |= STAIN:PLAYER:口
STAIN:PLAYER:口 |= STAIN:口

;-------------------------------------------------
;経験上昇
;-------------------------------------------------
;レズ・ホモ経験
IF HAVE_VAGINA(TARGET) && HAVE_VAGINA(PLAYER) 
	PRINTS EXPNAME:[[EXP:レズ経験]]
	PRINTL +3
	EXP:レズ経験 += 3
ELSEIF IS_MALE(TARGET) && IS_MALE(PLAYER) 
	PRINTS EXPNAME:[[EXP:ＢＬ経験]]
	PRINTL +3
	EXP:ＢＬ経験 += 3
ENDIF

;愛情経験
;基本値
E = 1

;愛かつ主人なら基本値に＋２
SIF TALENT:恋心 && ASSIPLAY == 0
	E += 2


IF CFLAG:好感度 >= 1000 && ASSIPLAY == 0
	PRINTFORML %EXPNAME:[[EXP:愛情経験]]%+{E}
	EXP:愛情経験 += E
ENDIF
E = 0

;-------------------------------------------------
;その他の処理
;-------------------------------------------------
TFLAG:快楽経験 = 1

SIF ASSIPLAY == 0
	TFLAG:主人経験 += 1

RETURN 1
