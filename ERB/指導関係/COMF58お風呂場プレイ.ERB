@COM58
;お風呂場プレイ

PRINTL お風呂場プレイ
SAVESTR:0 = お風呂場プレイ
CALL TRAIN_MESSAGE_B

;風呂場への出入り
;終了時は修正なし
IF TEQUIP:お風呂場プレイ
	SIF TEQUIP:シャワー
		TEQUIP:シャワー = 0
	TEQUIP:お風呂場プレイ = 0
	RETURN 1
ENDIF

LOSEBASE:体力 += 0
LOSEBASE:気力 += 30

A = 100
B = 50

;PALAM:欲情をみる
IF PALAM:欲情 < PALAMLV:1
	TIMES A , 0.80
ELSEIF PALAM:欲情 < PALAMLV:2
	TIMES A , 0.90
ELSEIF PALAM:欲情 < PALAMLV:3
	TIMES A , 1.00
ELSEIF PALAM:欲情 < PALAMLV:4
	TIMES A , 1.10
ELSEIF PALAM:欲情 >= PALAMLV:4
	TIMES A , 1.20
ENDIF
;ABL:露出癖をみる
IF ABL:露出癖 == 0
	SOURCE:中毒充足 += 0
	SOURCE:愛液分泌 += 0
	TIMES A, 1.00
ELSEIF ABL:露出癖 == 1
	SOURCE:中毒充足 += 50
	SOURCE:愛液分泌 += 50
	TIMES A, 1.10
ELSEIF ABL:露出癖 == 2
	SOURCE:中毒充足 += 80
	SOURCE:愛液分泌 += 80
	TIMES A, 1.20
ELSEIF ABL:露出癖 == 3
	SOURCE:中毒充足 += 100
	SOURCE:愛液分泌 += 100
	TIMES A, 1.30
ELSEIF ABL:露出癖 == 4
	SOURCE:中毒充足 += 200
	SOURCE:愛液分泌 += 200
	TIMES A, 1.40
ELSE
	SOURCE:中毒充足 += 300
	SOURCE:愛液分泌 += 300
	TIMES A, 1.50
ENDIF
;ABL:マゾっ気をみる
IF ABL:マゾっ気 == 0
	TIMES A , 1.00
ELSEIF ABL:マゾっ気 == 1
	TIMES A , 1.10
ELSEIF ABL:マゾっ気 == 2
	TIMES A , 1.20
ELSEIF ABL:マゾっ気 == 3
	TIMES A , 1.30
ELSEIF ABL:マゾっ気 == 4
	TIMES A , 1.40
ELSE
	TIMES A , 1.50
ENDIF

;目立ちたがり
SIF TALENT:目立ちたがり
	TIMES A , 1.50
;解放
SIF TALENT:解放
	TIMES A , 1.50

;臆病
SIF TALENT:臆病
	TIMES B , 1.10
;恥じらい
SIF TALENT:恥じらい
	TIMES B , 1.20

SOURCE:露出 += A
SOURCE:逸脱 += B
SOURCE:恭順 += A/2

						;****スライムパッチ追加ここから****
IF ITEM:疲労回復用入浴剤 >= 1
	TIMES LOSEBASE:体力 , 0.60
	TIMES LOSEBASE:気力 , 0.60
ENDIF
						;****スライムパッチ追加ここまで****
TEQUIP:お風呂場プレイ = 1

RETURN 1

