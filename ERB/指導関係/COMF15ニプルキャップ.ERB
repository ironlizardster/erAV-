;-------------------------------------------------
;ニプルキャップ
;道具使用コマンド：調教対象の乳房をニプルキャップで刺激
;-------------------------------------------------
@COM15

IF TEQUIP:触手召喚
	PRINTL 触手乳首責め
	SAVESTR:0 = 触手乳首責め
ELSE
	PRINTL ニプルキャップ
	SAVESTR:0 = ニプルキャップ
ENDIF
CALL TRAIN_MESSAGE_B

;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
LOSEBASE:体力 += 20
LOSEBASE:気力 += 70

SOURCE:露出 = 120
SOURCE:逸脱 = 70

;ABL:Ｂ感覚をみる
IF ABL:Ｂ感覚 == 0
	A = 100
ELSEIF ABL:Ｂ感覚 == 1
	A = 300
ELSEIF ABL:Ｂ感覚== 2
	A = 800
ELSEIF ABL:Ｂ感覚 == 3
	A = 1500
ELSEIF ABL:Ｂ感覚 == 4
	A = 2300
ELSE
	A = 2900
ENDIF

;助手が幼児退行
SIF TALENT:PLAYER:幼児退行
	TIMES SOURCE:快Ｂ , 1.20

;助手が幼稚
SIF TALENT:PLAYER:幼稚
	TIMES SOURCE:快Ｂ , 1.20

IF IS_巨乳(TARGET)
	TIMES A , 1.50
ENDIF
IF IS_Ｂ敏感(TARGET)
	TIMES A , 1.50
ELSEIF IS_Ｂ鈍感(TARGET)
	TIMES A , 0.60
ENDIF

SOURCE:快Ｂ += A

IF HAVE_VAGINA(TARGET) && HAVE_VAGINA(PLAYER) 
	PRINTS EXPNAME:[[EXP:レズ経験]]
	PRINTL +1
	EXP:レズ経験 += 1
ELSEIF IS_MALE(TARGET) && IS_MALE(PLAYER) 
	PRINTS EXPNAME:[[EXP:ＢＬ経験]]
	PRINTL +1
	EXP:ＢＬ経験 += 1
ENDIF

						;****スライムパッチ追加ここから****
IF ITEM:魔術式ニプルキャップ >= 1 && TEQUIP:触手召喚 == 0
	TIMES LOSEBASE:体力 , 0.80
	TIMES LOSEBASE:気力 , 0.80
	TIMES SOURCE:露出 , 1.20
	TIMES SOURCE:逸脱 , 0.80
	TIMES SOURCE:快Ｂ , 1.20
ENDIF
						;****スライムパッチ追加ここまで****
;-------------------------------------------------
;ニプルキャップの着脱
;-------------------------------------------------
TEQUIP:ニプルキャップ = 1 - TEQUIP:ニプルキャップ
SIF TEQUIP:触手召喚
	T = 0

;-------------------------------------------------
;汚れ（触手）
;-------------------------------------------------
IF TEQUIP:触手召喚 && TEQUIP:ニプルキャップ
	STAIN:胸 |= 2
	STAIN:胸 |= 4
ENDIF

RETURN 1

;-------------------------------------------------
;-------------------------------------------------
;ニプルキャップ装備中
;-------------------------------------------------
@EQUIP_COM15
IF TEQUIP:触手召喚
	PRINTL ＜触手乳首責め中＞
ELSE
	PRINTL ＜ニプルキャップ装備中＞
ENDIF

LOSEBASE:体力 += 5
LOSEBASE:気力 += 20

;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
;ABL:Ｂ感覚をみる
IF ABL:Ｂ感覚 == 0
	A = 40
ELSEIF ABL:Ｂ感覚 == 1
	A = 120
ELSEIF ABL:Ｂ感覚 == 2
	A = 250
ELSEIF ABL:Ｂ感覚 == 3
	A = 450
ELSEIF ABL:Ｂ感覚 == 4
	A = 600
ELSE
	A = 750
ENDIF

;PALAM:欲情をみる
IF PALAM:欲情 < PALAMLV:1
	TIMES A , 0.80
ELSEIF PALAM:欲情 < PALAMLV:2
	TIMES A , 0.90
ELSEIF PALAM:欲情 < PALAMLV:3
	TIMES A , 1.00
ELSEIF PALAM:欲情 < PALAMLV:4
	TIMES A , 1.10
ELSEIF PALAM:欲情 >= PALAMLV:4
	TIMES A , 1.20
ENDIF

;ABL:従順をみる
IF ABL:信頼 == 0
	TIMES A , 0.80
ELSEIF ABL:信頼 == 1
	TIMES A , 0.90
ELSEIF ABL:信頼 == 2
	TIMES A , 1.00
ELSEIF ABL:信頼 == 3
	TIMES A , 1.10
ELSEIF ABL:信頼 == 4
	TIMES A , 1.20
ELSE
	TIMES A , 1.30
ENDIF

SOURCE:快Ｂ += A
SOURCE:欲情 += 50
SOURCE:露出 += 50

						;****スライムパッチ追加ここから****
IF ITEM:魔術式ニプルキャップ >= 1 && TEQUIP:触手召喚 == 0
	LOSEBASE:体力 -= 1
	LOSEBASE:気力 -= 4
	TIMES SOURCE:欲情 , 1.20
	TIMES SOURCE:露出 , 1.20
	TIMES SOURCE:快Ｂ , 1.20
ENDIF
						;****スライムパッチ追加ここまで****
;-------------------------------------------------
;経験上昇
;-------------------------------------------------
IF HAVE_VAGINA(TARGET) && HAVE_VAGINA(PLAYER) 
	PRINTS EXPNAME:[[EXP:レズ経験]]
	PRINTL +1
	EXP:レズ経験 += 1
ELSEIF IS_MALE(TARGET) && IS_MALE(PLAYER) 
	PRINTS EXPNAME:[[EXP:ＢＬ経験]]
	PRINTL +1
	EXP:ＢＬ経験 += 1
ENDIF

IF TEQUIP:ニプルキャップ
	PRINTFORML %EXPNAME:[[EXP:Ｂ開発経験]]%+1
	EXP:Ｂ開発経験 += 1
ENDIF

IF TEQUIP:触手召喚
	T += 1
ENDIF

RETURN 1
