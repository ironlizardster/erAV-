;-------------------------------------------------
;アイマスク
;SM系コマンド
;-------------------------------------------------
@COM43

PRINTL アイマスク
SAVESTR:0 = アイマスク
CALL TRAIN_MESSAGE_B

LOSEBASE:体力 += 0
;緊縛経験が高いと消費減少
IF EXP:緊縛経験 < EXPLV:3 / 2
	LOSEBASE:気力 += 150
ELSEIF EXP:緊縛経験 < EXPLV:4 / 2
	LOSEBASE:気力 += 120
ELSE
	LOSEBASE:気力 += 90
ENDIF

;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
SOURCE:愛液分泌 = 250
SOURCE:露出 = 1000
SOURCE:逸脱 = 500

;PALAM:欲情をみる
IF PALAM:欲情 < PALAMLV:1
	TIMES SOURCE:愛液分泌 , 0.80
ELSEIF PALAM:欲情 < PALAMLV:2
	TIMES SOURCE:愛液分泌 , 0.90
ELSEIF PALAM:欲情 < PALAMLV:3
	TIMES SOURCE:愛液分泌 , 1.00
ELSEIF PALAM:欲情 < PALAMLV:4
	TIMES SOURCE:愛液分泌 , 1.10
ELSEIF PALAM:欲情 >= PALAMLV:4
	TIMES SOURCE:愛液分泌 , 1.20
ENDIF

;ABL:従順をみる
IF ABL:信頼 == 0
	TIMES SOURCE:愛液分泌 , 0.40
ELSEIF ABL:信頼 == 1
	TIMES SOURCE:愛液分泌 , 0.60
ELSEIF ABL:信頼 == 2
	TIMES SOURCE:愛液分泌 , 0.80
ELSEIF ABL:信頼 == 3
	TIMES SOURCE:愛液分泌 , 1.00
ELSEIF ABL:信頼 == 4
	TIMES SOURCE:愛液分泌 , 1.10
ELSE
	TIMES SOURCE:愛液分泌 , 1.20
ENDIF

;ABL:マゾっ気をみる
IF ABL:マゾっ気 == 0
	TIMES SOURCE:愛液分泌 , 0.80
ELSEIF ABL:マゾっ気 == 1
	TIMES SOURCE:愛液分泌 , 1.00
ELSEIF ABL:マゾっ気 == 2
	TIMES SOURCE:愛液分泌 , 1.30
ELSEIF ABL:マゾっ気 == 3
	TIMES SOURCE:愛液分泌 , 1.60
ELSEIF ABL:マゾっ気 == 4
	TIMES SOURCE:愛液分泌 , 2.00
ELSE
	TIMES SOURCE:愛液分泌 , 3.00
ENDIF

;倒錯的
SIF TALENT:倒錯的
	TIMES SOURCE:愛液分泌 , 2.00
;臆病
SIF TALENT:臆病
	TIMES SOURCE:逸脱 , 2.00

;-------------------------------------------------
;経験上昇
;-------------------------------------------------
EXP:緊縛経験 += 2
PRINTL 緊縛経験＋２

;アイマスクの着脱
TEQUIP:アイマスク = 1 - TEQUIP:アイマスク

RETURN 1

;-------------------------------------------------
;-------------------------------------------------
;アイマスク装着中
;-------------------------------------------------
@EQUIP_COM43

PRINTL ＜アイマスク装着中＞

LOSEBASE:体力 += 0
;緊縛経験が高いと消費減少
IF EXP:緊縛経験 < EXPLV:3 / 2
	LOSEBASE:気力 += 100
ELSEIF EXP:緊縛経験 < EXPLV:4 / 2
	LOSEBASE:気力 += 80
ELSE
	LOSEBASE:気力 += 60
ENDIF

;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
A = 250
B = 1000
C = 500

;PALAM:欲情をみる
IF PALAM:欲情 < PALAMLV:1
	TIMES A , 0.80
ELSEIF PALAM:欲情 < PALAMLV:2
	TIMES A , 0.90
ELSEIF PALAM:欲情 < PALAMLV:3
	TIMES A , 1.00
ELSEIF PALAM:欲情 < PALAMLV:4
	TIMES A , 1.10
ELSEIF PALAM:欲情 >= PALAMLV:4
	TIMES A , 1.20
ENDIF

;ABL:従順をみる
IF ABL:信頼 == 0
	TIMES A , 0.40
ELSEIF ABL:信頼 == 1
	TIMES A , 0.60
ELSEIF ABL:信頼 == 2
	TIMES A , 0.80
ELSEIF ABL:信頼 == 3
	TIMES A , 1.00
ELSEIF ABL:信頼 == 4
	TIMES A , 1.10
ELSE
	TIMES A , 1.20
ENDIF

;ABL:マゾっ気をみる
IF ABL:マゾっ気 == 0
	TIMES A , 0.80
ELSEIF ABL:マゾっ気 == 1
	TIMES A , 1.00
ELSEIF ABL:マゾっ気 == 2
	TIMES A , 1.30
ELSEIF ABL:マゾっ気 == 3
	TIMES A , 1.60
ELSEIF ABL:マゾっ気 == 4
	TIMES A , 2.00
ELSE
	TIMES A , 3.00
ENDIF

;倒錯的
SIF TALENT:倒錯的
	TIMES A , 2.00
;臆病
SIF TALENT:臆病
	TIMES C , 2.00

SOURCE:愛液分泌 += A
SOURCE:露出 += B
SOURCE:逸脱 += C

UP:[[UP:欲情]] += A
UP:[[UP:恐怖]] += SOURCE:逸脱

;-------------------------------------------------
;経験上昇
;-------------------------------------------------
IF HAVE_VAGINA(TARGET) && HAVE_VAGINA(PLAYER) 
	PRINTS EXPNAME:[[EXP:レズ経験]]
	PRINTL +1
	EXP:レズ経験 += 1
ELSEIF IS_MALE(TARGET) && IS_MALE(PLAYER) 
	PRINTS EXPNAME:[[EXP:ＢＬ経験]]
	PRINTL +1
	EXP:ＢＬ経験 += 1
ENDIF

EXP:緊縛経験 += 1
PRINTL 緊縛経験＋１
;
RETURN 1
