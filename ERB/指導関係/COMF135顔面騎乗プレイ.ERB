@COM135
;顔面騎乗プレイ

PRINTL 顔面騎乗プレイ
SAVESTR:0 = 顔面騎乗プレイ
CALL TRAIN_MESSAGE_B


;終了時は修正なし
IF TEQUIP:顔面騎乗
	TEQUIP:顔面騎乗 = 0
	RETURN 1
ENDIF

;体力は消費なし
LOSEBASE:体力 += 0
;気力は２００消費
LOSEBASE:気力 += 200


A = 500
B = 500

;EXP:嗜虐快楽経験をみる
IF EXP:嗜虐快楽経験 < EXPLV:1
	TIMES A , 1.00
ELSEIF EXP:嗜虐快楽経験 < EXPLV:2
	TIMES A , 1.10
ELSEIF EXP:嗜虐快楽経験 < EXPLV:3
	TIMES A , 1.20
ELSEIF EXP:嗜虐快楽経験 < EXPLV:4
	TIMES A , 1.30
ELSEIF EXP:嗜虐快楽経験 < EXPLV:4
	TIMES A , 1.40
ENDIF

;ABL:露出癖をみる
IF ABL:露出癖 == 0
	SOURCE:充足 += 0
	SOURCE:愛液分泌 += 0
	SOURCE:屈従 += 600
	SOURCE:逸脱 += 1000
	SOURCE:反感 += 1000
	TIMES A, 0.60
ELSEIF ABL:露出癖 == 1
	SOURCE:充足 += 150
	SOURCE:愛液分泌 += 150
	SOURCE:屈従 += 500
	TIMES A, 1.00
ELSEIF ABL:露出癖 == 2
	SOURCE:充足 += 300
	SOURCE:愛液分泌 += 300
	SOURCE:屈従 += 400
	TIMES A, 1.60
ELSEIF ABL:露出癖 == 3
	SOURCE:充足 += 600
	SOURCE:愛液分泌 += 600
	SOURCE:屈従 += 300
	TIMES A, 2.00
ELSEIF ABL:露出癖 == 4
	SOURCE:充足 += 1000
	SOURCE:愛液分泌 += 1000
	SOURCE:屈従 += 200
	TIMES A, 2.60
ELSE
	SOURCE:充足 += 1800
	SOURCE:愛液分泌 += 1800
	SOURCE:屈従 += 100
	TIMES A, 3.80
ENDIF
;ABL:サドっ気をみる
IF ABL:サドっ気 == 0
	TIMES A , 1.00
ELSEIF ABL:サドっ気 == 1
	TIMES A , 1.20
ELSEIF ABL:サドっ気 == 2
	TIMES A , 1.40
ELSEIF ABL:サドっ気 == 3
	TIMES A , 1.60
ELSEIF ABL:サドっ気 == 4
	TIMES A , 1.80
ELSE
	TIMES A , 2.00
ENDIF

;無関心
SIF TALENT:クール
	TIMES A , 0.80
;感情乏しい
SIF TALENT:感情乏しい
	TIMES A , 0.80
;好奇心
SIF TALENT:好奇心
	TIMES A , 2.50
;解放
SIF IS_解放(TARGET)
	TIMES A , 1.50

;臆病
SIF TALENT:臆病
	TIMES B , 1.50
;恥じらい
SIF IS_恥じらい(TARGET)
	TIMES B , 3.00

;倒錯的
SIF TALENT:倒錯的
	TIMES A , 1.50
	TIMES B , 1.20
;魅力
SIF TALENT:魅力
	SOURCE:屈従 += 500
	SOURCE:逸脱 += 500
	TIMES A , 1.50
	TIMES B , 1.20

SOURCE:露出 += A
SOURCE:逸脱 += B
SOURCE:恭順 += A/2

TEQUIP:顔面騎乗 = 1


RETURN 1


