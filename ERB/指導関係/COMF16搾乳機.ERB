;-------------------------------------------------
;搾乳器
;道具使用コマンド：調教対象の乳房を搾乳器で刺激
;-------------------------------------------------
@COM16

IF TEQUIP:触手召喚
	PRINTL 触手搾乳
	SAVESTR:0 = 触手搾乳
ELSE
	PRINTL 搾乳器
	SAVESTR:0 = 搾乳器
ENDIF
CALL TRAIN_MESSAGE_B

LOSEBASE:体力 += 50
LOSEBASE:気力 += 100

;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
SOURCE:性行動 = 100
SOURCE:達成 = 100
SOURCE:痛覚 = 100
SOURCE:中毒充足 = 100
SOURCE:露出 = 100
SOURCE:屈従 = 100
SOURCE:恭順 = 100


;ABL:Ｂ感覚をみる
IF ABL:Ｂ感覚 == 0
	A = 200
ELSEIF ABL:Ｂ感覚 == 1
	A = 400
ELSEIF ABL:Ｂ感覚 == 2
	A = 900
ELSEIF ABL:Ｂ感覚 == 3
	A = 1600
ELSEIF ABL:Ｂ感覚 == 4
	A = 2400
ELSE
	A = 3000
ENDIF

IF IS_巨乳(TARGET)
	TIMES A , 1.50
ENDIF
IF IS_Ｂ敏感(TARGET)
	TIMES A , 1.50
ELSEIF IS_Ｂ鈍感(TARGET)
	TIMES A , 0.60
ENDIF

;絶壁
SIF IS_絶壁(TARGET)
	TIMES SOURCE:痛覚 , 1.80
;貧乳
SIF IS_貧乳(TARGET)
	TIMES SOURCE:痛覚 , 1.50

SOURCE:快Ｂ += A

						;****スライムパッチ追加ここから****
IF ITEM:魔術式搾乳器 >= 1 && TEQUIP:触手召喚 == 0
	TIMES LOSEBASE:体力 , 0.80
	TIMES LOSEBASE:気力 , 0.80
	TIMES SOURCE:性行動 , 1.20
	TIMES SOURCE:達成 , 1.20
	TIMES SOURCE:痛覚 , 0.80
	TIMES SOURCE:中毒充足 , 1.20
	TIMES SOURCE:露出 , 1.20
	TIMES SOURCE:屈従 , 1.20
	TIMES SOURCE:恭順 , 1.20
	TIMES SOURCE:快Ｂ , 1.20
ENDIF
						;****スライムパッチ追加ここまで****
;-------------------------------------------------
;経験上昇
;-------------------------------------------------
IF HAVE_VAGINA(TARGET) && HAVE_VAGINA(PLAYER) 
	PRINTS EXPNAME:[[EXP:レズ経験]]
	PRINTL +1
	EXP:レズ経験 += 1
ELSEIF IS_MALE(TARGET) && IS_MALE(PLAYER) 
	PRINTS EXPNAME:[[EXP:ＢＬ経験]]
	PRINTL +1
	EXP:ＢＬ経験 += 1
ENDIF

;-------------------------------------------------
;搾乳器の着脱
;-------------------------------------------------
TEQUIP:搾乳機 = 1 - TEQUIP:搾乳機
SIF TEQUIP:触手召喚
	T = 0

;-------------------------------------------------
;汚れ（触手）
;-------------------------------------------------
IF TEQUIP:触手召喚 && TEQUIP:搾乳機
	STAIN:胸 |= 2
	STAIN:胸 |= 4
ENDIF

RETURN 1

;-------------------------------------------------
;-------------------------------------------------
;搾乳器装備中
;-------------------------------------------------
@EQUIP_COM16

IF TEQUIP:触手召喚
	PRINTL ＜触手搾乳中＞
ELSE
	PRINTL ＜搾乳器装備中＞
ENDIF

LOSEBASE:体力 += 15
LOSEBASE:気力 += 15

;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
;ABL:B感覚をみる
IF ABL:Ｂ感覚 == 0
	A = 40
ELSEIF ABL:Ｂ感覚 == 1
	A = 120
ELSEIF ABL:Ｂ感覚 == 2
	A = 250
ELSEIF ABL:Ｂ感覚 == 3
	A = 450
ELSEIF ABL:Ｂ感覚 == 4
	A = 600
ELSE
	A = 750
ENDIF

;PALAM:欲情をみる
IF PALAM:欲情 < PALAMLV:1
	TIMES A , 0.80
ELSEIF PALAM:欲情 < PALAMLV:2
	TIMES A , 0.90
ELSEIF PALAM:欲情 < PALAMLV:3
	TIMES A , 1.00
ELSEIF PALAM:欲情 < PALAMLV:4
	TIMES A , 1.10
ELSEIF PALAM:欲情 >= PALAMLV:4
	TIMES A , 1.20
ENDIF

;ABL:従順をみる
IF ABL:信頼 == 0
	TIMES A , 0.80
ELSEIF ABL:信頼 == 1
	TIMES A , 0.90
ELSEIF ABL:信頼 == 2
	TIMES A , 1.00
ELSEIF ABL:信頼 == 3
	TIMES A , 1.10
ELSEIF ABL:信頼 == 4
	TIMES A , 1.20
ELSE
	TIMES A , 1.30
ENDIF

;EXP:噴乳経験をみる
IF EXP:噴乳経験 <= EXPLV:0
	TIMES A , 1.00
ELSEIF EXP:噴乳経験 <= EXPLV:1
	TIMES A , 1.20
ELSEIF EXP:噴乳経験 <= EXPLV:2
	TIMES A , 1.40
ELSEIF EXP:噴乳経験 <= EXPLV:3
	TIMES A , 1.80
ELSEIF EXP:噴乳経験 <= EXPLV:4
	TIMES A , 2.25
ELSE
	TIMES A , 4.00
ENDIF

IF IS_巨乳(TARGET)
	TIMES A , 1.3
ENDIF
IF IS_Ｂ敏感(TARGET)
	TIMES A , 1.4
ELSEIF IS_Ｂ鈍感(TARGET)
	TIMES A , 0.6
ENDIF


;絶壁
SIF IS_絶壁(TARGET)
	TIMES SOURCE:痛覚 , 1.80
;貧乳
SIF IS_貧乳(TARGET)
	TIMES SOURCE:痛覚 , 1.50

SOURCE:快Ｂ += A
SOURCE:性行動 += 150
SOURCE:痛覚 += 100
SOURCE:中毒充足 += 100
SOURCE:欲情 += 50
SOURCE:露出 += 50
SOURCE:屈従 += 50
SOURCE:逸脱 += 50
SOURCE:恭順 += 50

						;****スライムパッチ追加ここから****
IF ITEM:魔術式搾乳器 >= 1 && TEQUIP:触手召喚 == 0
	LOSEBASE:体力 -= 3
	LOSEBASE:気力 -= 3
	TIMES SOURCE:性行動 , 1.20
	TIMES SOURCE:達成 , 1.20
	TIMES SOURCE:痛覚 , 0.80
	TIMES SOURCE:中毒充足 , 1.20
	TIMES SOURCE:露出 , 1.20
	TIMES SOURCE:屈従 , 1.20
	TIMES SOURCE:恭順 , 1.20
	TIMES SOURCE:快Ｂ , 1.20
ENDIF
						;****スライムパッチ追加ここまで****
;-------------------------------------------------
;経験上昇
;-------------------------------------------------
IF HAVE_VAGINA(TARGET) && HAVE_VAGINA(PLAYER) 
	PRINTS EXPNAME:[[EXP:レズ経験]]
	PRINTL +1
	EXP:レズ経験 += 1
ELSEIF IS_MALE(TARGET) && IS_MALE(PLAYER) 
	PRINTS EXPNAME:[[EXP:ＢＬ経験]]
	PRINTL +1
	EXP:ＢＬ経験 += 1
ENDIF

IF TEQUIP:触手召喚
	T += 1
	CALL SYOKUSYU_MILK
ENDIF

RETURN 1
