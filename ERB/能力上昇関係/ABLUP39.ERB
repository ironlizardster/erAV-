;噴乳中毒のLvUP処理とその可否判定
;eraIm@s_ver.0.17βdのスクリプトをベースに処理を簡略化

;-------------------------------------------------
;噴乳中毒のLvUP
;-------------------------------------------------
@ABLUP39
DRAWLINE
;PRINTL 奴隷の噴乳への執着心を高めます
;PRINTL 
;PRINTL 
;DRAWLINE
;噴乳中毒はLv5が上限
;[淫乳]が付いている場合はLv10まで解放
IF ABL:噴乳中毒 >= 5 && TALENT:淫乳 == 0
	PRINTW これ以上UPするには素質が必要です
	RETURN 0
ELSEIF ABL:噴乳中毒 >= 10
	PRINTW 既にMAXです
	RETURN 0
ENDIF

;必要な快Ｂの珠
A = 0
;必要な屈服の珠
B = 0
;必要な噴乳経験
C = 0
;必要な異常経験
F = 0


CALL CAN_ABLUP39

;上げるときは異常経験必要（素質：[淫乱][中毒しやすい]なら無視できる）
SIF F > 0
	PRINTFORML %EXPNAME:[[EXP:異常経験]]%{F}以上(現在{EXP:異常経験})かつ

;欲望が必要
PRINTFORML %ABLNAME:[[ABL:欲望]]%{ABL:噴乳中毒 + 1}LV以上(現在{ABL:欲望})かつ

PRINTFORM [0] - %PALAMNAME:[[PALAM:快Ｂ]]%の珠×{JUEL:快Ｂ}/{A} ……
IF I == 0
	PRINT ＯＫ
ELSE
	SIF I & 1
		PRINT 珠不足 
	SIF I & 2
		PRINT 経験不足 
	SIF I & 4
		PRINT 能力不足 
ENDIF
PRINTL 
PRINTFORML 　　　%PALAMNAME:[[PALAM:屈服]]%の珠×{JUEL:屈服}/{B}
PRINTFORML 　　　%EXPNAME:[[EXP:噴乳経験]]%　{EXP:噴乳経験}/{C}
PRINTL [100] - やめる

INPUT
IF (RESULT < 0 || RESULT > 0) && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL 条件を満たしていません
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:噴乳中毒 += 1
IF RESULT == 0
	JUEL:快Ｂ -= A
	JUEL:屈服 -= B
ENDIF

PRINTFORML %ABLNAME:[[ABL:噴乳中毒]]%のレベルが{ABL:噴乳中毒}になりました

RETURN 0

;--------------------------------------------------
;レベルアップに必要な珠計算、レベルアップ予告処理
;--------------------------------------------------
@CAN_ABLUP39
;噴乳中毒はLv5が上限
;[淫乳]が付いている場合はLv10まで解放
SIF ABL:噴乳中毒 >= 10
	RETURN 0
SIF ABL:噴乳中毒 >= 5 && TALENT:淫乳 == 0
	RETURN 0


;条件別にＯＫかダメかを記録する
I = 0

IF ABL:噴乳中毒 == 0
	A = 3000
	B = 10000
ELSEIF ABL:噴乳中毒 == 1
	A = 8000
	B = 20000
	C = 10
ELSEIF ABL:噴乳中毒 == 2
	A = 15000
	B = 35000
	C = 30
ELSEIF ABL:噴乳中毒 == 3
	A = 30000
	B = 60000
	C = 75
	F = 1
ELSEIF ABL:噴乳中毒 == 4
	A = 50000
	B = 130000
	C = 150
	F = 2
ELSEIF ABL:噴乳中毒 == 5
	A = 65000
	B = 190000
	C = 180
ELSEIF ABL:噴乳中毒 == 6
	A = 900000
	B = 3000000
	C = 250
ELSEIF ABL:噴乳中毒 == 7
	A = 120000
	B = 500000
	C = 350
ELSEIF ABL:噴乳中毒 == 8
	A = 200000
	B = 800000
	C = 500
	F = 5
ELSEIF ABL:噴乳中毒 == 9
	A = 500000
	B = 1500000
	C = 600
	F = 7
ENDIF

;一線越えない
IF TALENT:一線越えない
	IF ABL:噴乳中毒 == 3
		TIMES A , 2.00
		TIMES B , 2.00
		TIMES C , 2.00
	ELSEIF ABL:噴乳中毒 == 4
		TIMES A , 2.50
		TIMES B , 2.50
		TIMES C , 2.50
	ELSEIF ABL:噴乳中毒 >= 5
		TIMES A , 3.00
		TIMES B , 3.00
		TIMES C , 3.00
	ENDIF
ENDIF

F = 0
;２以上に上げるときは異常経験必要（素質：[中毒しやすい][淫乱]なら無視できる）
SIF ABL:噴乳中毒 >= 2 && (TALENT:中毒しやすい == 0 && TALENT:淫乱 == 0)
		F = ABL:噴乳中毒 + 1

;自制心
IF TALENT:自制心
	TIMES A , 2.50
	TIMES B , 2.50
	TIMES C , 1.50
ENDIF

;快感に素直
IF TALENT:快感に素直
	TIMES A , 0.75
	TIMES B , 0.75
ENDIF

;快感の否定
IF TALENT:快感の否定
	TIMES A , 1.75
	TIMES B , 1.75
ENDIF

;中毒しやすい
IF TALENT:中毒しやすい
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
ENDIF

;倒錯的
IF TALENT:倒錯的
	TIMES A , 0.75
	TIMES B , 0.75
	TIMES C , 0.75
ENDIF

;淫乱
IF TALENT:淫乱
	TIMES A , 0.75
	TIMES B , 0.75
	TIMES C , 0.75
ENDIF
;色情狂
IF TALENT:絶倫
	TIMES A , 0.40
	TIMES B , 0.40
	TIMES C , 0.40
ENDIF
;淫魔
IF TALENT:淫魔
	TIMES A , 0.01
	TIMES B , 0.01
	TIMES C , 0.01
ENDIF

;B鈍感
IF TALENT:Ｂ鈍感
	TIMES A , 1.50
	TIMES B , 1.50
	TIMES C , 1.50
ENDIF

;B敏感
IF TALENT:Ｂ敏感
	TIMES A , 0.80
	TIMES B , 0.80
	TIMES C , 0.80
ENDIF

;淫乳
IF TALENT:淫乳
	TIMES A , 0.75
	TIMES B , 0.75
	TIMES C , 0.75
ENDIF

;最低でも１回・１個は必要
SIF A < 1
	A = 1
SIF B < 1
	B = 1
SIF C < 1
	C = 1

;欲望が必要
SIF ABL:欲望 < ABL:噴乳中毒 + 1
	I |= 4
;快Bの珠は足りている？
SIF JUEL:快Ｂ < A
	I |= 1
;屈服の珠は足りている？
SIF JUEL:屈服 < B
	I |= 1

;噴乳経験は足りている？
SIF EXP:噴乳経験 < C
	I |= 2
;異常経験は足りている？
SIF EXP:異常経験 < F
	I |= 2

IF I == 0
	RETURN 1
ELSE
	RETURN 0
ENDIF

