IF TALENT:狂気
	TIMES A , 0.80
	TIMES B , 0.80
	TIMES C , 0.80
ENDIF
;崩壊
IF TALENT:崩壊
	TIMES A , 0.80
	TIMES B , 0.80
	TIMES C , 0.80
