;黒ギャル
IF TALENT:ギャル系 == 1
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
ENDIF

IF TALENT:褐色肌 == 1
	TIMES A , 0.80
	TIMES B , 0.80
	TIMES C , 0.80
ENDIF

;淫魔
IF TALENT:淫魔
	TIMES A , 0.10
	TIMES B , 0.10
	TIMES C , 0.10
ENDIF


;最低でも1回・1個は必要
SIF A < 1
	A = 1
SIF B < 1
	B = 1
SIF C < 1
	C = 1

;ＬＶ２から３、ＬＶ３から４、４から５に上げるときは異常経験必要（素質：[解放][淫乱][中毒しやすい][狂気]なら無視できる）
IF ABL:性交中毒 >= 2 && (!IS_解放(TARGET) && TALENT:中毒しやすい == 0 && TALENT:淫乱 == 0 && TALENT:狂気 == 0 && TALENT:淫魔 == 0)
	F = ABL:性交中毒 - 1
	IF EXP:異常経験 < F
		;異常経験が不足
		I |= 2
		J |= 2
	ENDIF
ENDIF

;奉仕精神が性交中毒+1Lv必要
IF TALENT:恋心 == 0
	IF ABL:欲望 < ABL:性交中毒 + 1
		I |= 4
		J |= 4
	ENDIF
ELSEIF TALENT:恋心 == 1
	IF ABL:奉仕精神 < ABL:性交中毒 + 1
		I |= 4
		J |= 4
	ENDIF
ENDIF

;欲情の珠は足りている？
SIF JUEL:欲情 < A
	I |= 1
;屈服の珠は足りている？
SIF JUEL:屈服 < B
	I |= 1
;性交経験が必要
SIF EXP:性交経験 < C
	I |= 2

;欲情の珠は足りている？
SIF JUEL:欲情 < A * 3
	J |= 1
;充実の珠は足りている？
SIF JUEL:屈服 < B * 3
	J |= 1
;性交経験が必要
SIF EXP:性交経験 < C / 2
	J |= 2

IF I == 0 || J == 0
	RETURN 1
ELSE
	RETURN 0
ENDIF


