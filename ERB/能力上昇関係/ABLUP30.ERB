;保守的
IF TALENT:保守的
	TIMES A , 1.20
	TIMES B , 1.20
	TIMES C , 1.20
ENDIF

;貞操観念
IF IS_貞操観念(TARGET)
	TIMES A , 1.20
	TIMES B , 1.20
	TIMES C , 1.20
;貞操無頓着
ELSEIF IS_貞操無頓着(TARGET)
	TIMES A , 0.90
	TIMES B , 0.90
	TIMES C , 0.90
ENDIF

;抑圧
IF IS_抑圧(TARGET)
	TIMES A , 1.20
	TIMES B , 1.20
	TIMES C , 1.20
;解放
ELSEIF IS_解放(TARGET)
	TIMES A , 0.80
	TIMES B , 0.80
	TIMES C , 0.80
ENDIF

;抵抗
IF TALENT:抵抗
	TIMES A , 1.20
	TIMES B , 1.20
	TIMES C , 1.20
ENDIF

;恥じらい
IF IS_恥じらい(TARGET)
	TIMES A , 1.10
	TIMES B , 1.10
	TIMES C , 1.10
;恥薄い
ELSEIF IS_恥薄い(TARGET)
