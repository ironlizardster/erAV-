@SHOW_JUEL
DRAWLINE
A = 0
B = 0
PRINT  
REPEAT 12
	IF COUNT == 3
		B = 14
	ELSEIF COUNT == 11
		B = 100
	ELSE
		B = COUNT
	ENDIF

	PRINTFORM %PALAMNAME:B%の珠：

	;表示位置そろえる
	IF JUEL:B < 10
		PRINT      
	ELSEIF JUEL:B < 100
		PRINT     
	ELSEIF JUEL:B < 1000
		PRINT    
	ELSEIF JUEL:B < 10000
		PRINT   
	ELSEIF JUEL:B < 100000
		PRINT  
	ENDIF
	PRINTV JUEL:B

	;改行or表示位置あけ
	SIF A%4 == 3
		PRINTL 
	SIF B != 100
		PRINT  
	A = A + 1
REND
