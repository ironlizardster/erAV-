A = 0
;必要な欲情の珠
B = 0
;必要な被虐快楽経験回数
C = 0
;苦痛＋屈服で上げる場合に必要な苦痛の珠
D = 0
;必要な屈服の珠
E = 0
;必要な異常経験回数
F = 0
;必要な絶頂経験回数
G = 0

;条件別にＯＫかダメかを記録する
;苦痛＋欲情の珠による可否（I=0:可、I&1:珠不足、I&2:経験不足、I&4:能力不足）
I = 0
;苦痛＋屈服の珠による可否（I=0:可、I&1:珠不足、I&2:経験不足、I&4:能力不足）
J = 0

CALL CAN_ABLUP21

;欲望がマゾっ気＋１レベルでないといけない
PRINTFORML %ABLNAME:[[ABL:欲望]]%{ABL:マゾっ気+1}LV以上(現在{ABL:欲望}LV)かつ

;ＬＶ３から４、４から５に上げるときは異常経験必要（素質：[解放]なら無視できる）
SIF F > 0
	PRINTFORML %EXPNAME:[[EXP:異常経験]]%{F}以上(現在{EXP:異常経験})かつ

IF B > 0
	PRINTFORM [0] - %PALAMNAME:[[PALAM:苦痛]]%の珠×{JUEL:苦痛}/{A} ……
	IF I == 0
		PRINT ＯＫ
	ELSE
		SIF I & 1
			PRINT 珠不足 
		SIF I & 2
			PRINT 経験不足 
		SIF I & 4
			PRINT 能力不足 
	ENDIF
	PRINTL 
	;欲情の珠
	PRINTFORML 　　　%PALAMNAME:[[PALAM:欲情]]%の珠×{JUEL:欲情}/{B}
	;被虐快楽経験
	SIF C > 0
		PRINTFORML 　　　%EXPNAME:[[EXP:被虐快楽経験]]%　{EXP:被虐快楽経験}/{C}
ENDIF

IF D > 0
	PRINTFORM [1] - %PALAMNAME:[[PALAM:苦痛]]%の珠×{JUEL:苦痛}/{D} ……
	IF J == 0
		PRINT ＯＫ
	ELSE
		SIF J & 1
			PRINT 珠不足 
		SIF J & 2
			PRINT 経験不足 
		SIF J & 4
			PRINT 能力不足 
	ENDIF
	PRINTL 
	;屈服の珠
	PRINTFORML 　　　%PALAMNAME:[[PALAM:屈服]]%の珠×{JUEL:屈服}/{E}
	;被虐快楽経験
	SIF C > 0
		PRINTFORML 　　　%EXPNAME:[[EXP:被虐快楽経験]]%　{EXP:被虐快楽経験}/{C}
	;絶頂経験
	SIF G > 0
		PRINTFORML 　　　%EXPNAME:[[EXP:絶頂経験]]%　{EXP:絶頂経験}/{G}
ENDIF

PRINTL [100] - やめる

INPUT
IF (RESULT < 0 || RESULT > 1) && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL 条件を満たしていません
	RESTART
ELSEIF J == 256 && RESULT == 1
	RESTART
ELSEIF J != 0 && RESULT == 1
	PRINTL 条件を満たしていません
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:マゾっ気 += 1

IF RESULT == 0
	JUEL:苦痛 -= A
	JUEL:欲情 -= B
ELSEIF RESULT == 1
	JUEL:苦痛 -= D
	JUEL:屈服 -= E
ENDIF

PRINTFORML %ABLNAME:[[ABL:マゾっ気]]%のレベルが{ABL:マゾっ気}になりました

RETURN 0

