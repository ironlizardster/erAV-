;露出癖のLvUP処理とその可否判定
;eratohoA ver1,204のスクリプトをベースに処理を簡略化

;-------------------------------------------------
;露出癖のLvUP
;-------------------------------------------------
@ABLUP17
DRAWLINE
;PRINTL 奴隷の露出癖を高めます
;PRINTL 露出癖が高いと、恥辱的な行為や屈辱的な行為から快楽を得られるようになります
;DRAWLINE
;露出癖はLv5が上限
;[素直][解放][目立ちたがり][露出狂]が付いている場合はLv10まで解放
;[快感に素直]も。
IF ABL:露出癖 >= 5 && (TALENT:素直 == 0 && TALENT:解放 == 0 && TALENT:目立ちたがり == 0 && TALENT:露出狂 == 0 && TALENT:快感に素直 == 0)
	PRINTW これ以上UPするには素質が必要です
	RETURN 0
ELSEIF ABL:露出癖 >= 10
	PRINTW 既にMAXです
	RETURN 0
ENDIF

;必要な恥情の珠
A = 0
;必要な異常経験回数
B = 0
;必要な絶頂経験回数
C = 0
;必要な調教自慰経験回数
D = 0
;必要な野外露出経験回数
E = 0

;条件別にＯＫかダメかを記録する
;恥情の珠による可否（I=0:可、I&1:珠不足、I&2:経験不足）
I = 0

CALL CAN_ABLUP17

;欲望が露出癖＋１レベルでないといけない（[愛]がない場合）
IF TALENT:恋心 == 0
	PRINTFORM %ABLNAME:[[ABL:欲望]]%{ABL:露出癖+1}LV以上(現在{ABL:欲望}LV)かつ
	PRINTL 
ELSEIF TALENT:恋心 == 1
;従順が露出癖＋１レベルでないといけない（[愛]がある場合）
	PRINTFORM %ABLNAME:[[ABL:信頼]]%{ABL:露出癖+1}LV以上(現在{ABL:信頼}LV)かつ
	PRINTL
ENDIF

;異常経験が必要か
SIF B > 0
	PRINTFORML %EXPNAME:[[EXP:異常経験]]%{B}以上(現在{EXP:異常経験})かつ

PRINTFORM [0] - %PALAMNAME:[[PALAM:恥情]]%の珠×{JUEL:恥情}/{A} ……
IF I == 0
	PRINT ＯＫ
ELSE
	SIF I & 1
		PRINT 珠不足 
	SIF I & 2
		PRINT 経験不足 
	SIF I & 4
		PRINT 能力不足 
ENDIF
PRINTL 
;絶頂経験
SIF C > 0
	PRINTFORML 　　　%EXPNAME:[[EXP:絶頂経験]]%　{EXP:絶頂経験}/{C}
;調教自慰経験
SIF D > 0
	PRINTFORML 　　　%EXPNAME:[[EXP:調教自慰経験]]%　{EXP:調教自慰経験}/{D}
;調教自慰経験
SIF E > 0
	PRINTFORML 　　　%EXPNAME:[[EXP:野外露出経験]]%　{EXP:野外露出経験}/{E}

PRINTL [100] - やめる

INPUT
IF (RESULT < 0 || RESULT > 0) && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL 条件を満たしていません。
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:露出癖 += 1

IF RESULT == 0
	JUEL:恥情 -= A
ENDIF

PRINTFORML %ABLNAME:[[ABL:露出癖]]%のレベルが{ABL:露出癖}になりました

RETURN 0

;-------------------------------------------------
;露出癖のLvUP可否判定
;-------------------------------------------------
@CAN_ABLUP17
SIF ABL:露出癖 >= 10
	RETURN 0
SIF ABL:露出癖 >= 5 && (TALENT:素直 == 0 && TALENT:解放 == 0 && TALENT:目立ちたがり == 0 && TALENT:露出狂 == 0 && TALENT:快感に素直 == 0)
	RETURN 0

;判定変数を空に
A = 0
B = 0
C = 0
D = 0
E = 0
I = 0
J = 0

IF ABL:露出癖 == 0
	A = 100
	C = 1
ELSEIF ABL:露出癖 == 1
	A = 1000
	D = 1
ELSEIF ABL:露出癖 == 2
	A = 3000
	D = 10
ELSEIF ABL:露出癖 == 3
	A = 6000
	D = 30
ELSEIF ABL:露出癖 == 4
	A = 12000
	D = 50
	E = 5
ELSEIF ABL:露出癖 == 5
	A = 25000
	D = 75
	E = 10
ELSEIF ABL:露出癖 == 6
	A = 50000
	D = 100
	E = 20
ELSEIF ABL:露出癖 == 7
	A = 80000
	D = 200
	E = 40
ELSEIF ABL:露出癖 == 8
	A = 120000
	D = 300
	E = 50
ELSEIF ABL:露出癖 == 9
	A = 150000
	D = 500
	E = 100
ENDIF

;一線越えない
IF TALENT:一線越えない
	SIF ABL:露出癖 == 3
		TIMES A , 1.50
	SIF ABL:露出癖 == 4
		TIMES A , 2.00
	SIF ABL:露出癖 == 5
		TIMES A , 2.50
	SIF ABL:露出癖 >= 6
		TIMES A , 3.00
ENDIF

;ＬＶ３以上に上げるときは異常経験必要（素質：[目立ちたがり][解放][淫乱][倒錯的][マゾ][狂気]なら無視できる）
IF ABL:露出癖 >= 3 && (TALENT:目立ちたがり == 0 && TALENT:解放 == 0 && TALENT:快感に素直 == 0 && TALENT:淫乱 == 0 && TALENT:倒錯的 == 0 && TALENT:マゾ == 0 && TALENT:狂気 == 0)
	B = ABL:露出癖 - 2
ENDIF

;臆病
SIF TALENT:臆病
	TIMES A , 1.20
;反抗的
SIF TALENT:ナマイキ
	TIMES A , 1.50
;気丈
SIF TALENT:気丈
	TIMES A , 1.10
;自制心
SIF TALENT:自制心
	TIMES A , 1.10
;無関心
SIF TALENT:クール
	TIMES A , 1.10
;感情乏しい
SIF TALENT:感情乏しい
	TIMES A , 1.50
;目立ちたがり
IF TALENT:目立ちたがり
	TIMES A , 0.50
	TIMES D , 0.50
	TIMES E , 0.50
ENDIF
;貞操観念
IF TALENT:貞操観念
	TIMES A , 1.20
	TIMES D , 1.20
	TIMES E , 1.20
ENDIF
;貞操無頓着
IF TALENT:貞操無頓着
	TIMES A , 0.80
	TIMES D , 0.80
	TIMES E , 0.80
ENDIF


;抑圧
IF TALENT:抑圧
	TIMES A , 1.20
	TIMES D , 1.20
	TIMES E , 1.20
;解放
ELSEIF TALENT:解放
	TIMES A , 0.80
	TIMES D , 0.80
	TIMES E , 0.80
ENDIF

;抵抗
IF TALENT:抵抗
	TIMES A , 1.50
	TIMES D , 1.50
	TIMES E , 1.50
ENDIF

;恥じらい
IF TALENT:恥じらい
	TIMES A , 1.10
	TIMES D , 1.10
	TIMES E , 1.10
;恥薄い
ELSEIF TALENT:恥薄い
	TIMES A , 0.90
	TIMES D , 0.90
	TIMES E , 0.90
ENDIF

;弱味
SIF TALENT:弱味
	TIMES A , 0.80

;自慰しやすい
IF TALENT:自慰しやすい
	TIMES A , 0.90
	TIMES D , 0.90
	TIMES E , 0.90
ENDIF	

;快感に素直
IF TALENT:快感に素直
	TIMES A , 0.90
	TIMES D , 0.90
	TIMES E , 0.90
;快感の否定
ELSEIF TALENT:快感の否定
	TIMES A , 1.20
	TIMES D , 1.20
	TIMES E , 1.20
ENDIF

;中毒しやすい
IF TALENT:中毒しやすい
	TIMES A , 0.80
	TIMES D , 0.80
	TIMES E , 0.80
ENDIF
;即落ち
IF TALENT:即落ち
	TIMES A , 0.90
	TIMES D , 0.90
	TIMES E , 0.90
ENDIF
;淫乱
IF TALENT:淫乱
	TIMES A , 0.75
	TIMES D , 0.75
	TIMES E , 0.75
ENDIF

;色情狂
IF TALENT:絶倫
	TIMES A , 0.40
	TIMES D , 0.40
	TIMES E , 0.40
ENDIF
;倒錯的
SIF TALENT:倒錯的
	TIMES A , 0.75
	TIMES D , 0.75
	TIMES E , 0.75
;サド
SIF TALENT:サド
	TIMES A , 1.20
;マゾ
SIF TALENT:マゾ
	TIMES A , 0.75
;露出狂
IF TALENT:露出狂
	TIMES A , 0.10
	TIMES D , 0.10
	TIMES E , 0.10
ENDIF
;狂気
SIF TALENT:狂気
	TIMES A , 0.50
;崩壊
SIF TALENT:崩壊
	TIMES A , 0.80
;アイドル
SIF TALENT:アイドル
	TIMES A , 0.80
;大和撫子
IF TALENT:大和撫子
	TIMES A , 1.25
	TIMES D , 1.25
	TIMES E , 1.25
ENDIF
IF TALENT:淫魔
	TIMES A , 0.10
	TIMES D , 0.10
	TIMES E , 0.10
ENDIF

;欲望が露出癖＋１レベルでないといけない（[愛]がない場合）
IF TALENT:恋心 == 0
	IF ABL:欲望 < ABL:露出癖+1
		;欲望が不足
		I |= 4
	ENDIF
ELSEIF TALENT:恋心 == 1
;従順が露出癖＋１レベルでないといけない（[愛]がある場合）
	IF ABL:信頼 < ABL:露出癖+1
		;従順が不足
		I |= 4
	ENDIF
ENDIF

;最低でも1個は必要
SIF A < 1
	A = 1

;異常経験が不足
SIF EXP:異常経験 < B
	I |= 2
;絶頂経験が不足
SIF EXP:絶頂経験 < C
	I |= 2
;調教自慰経験が不足
SIF EXP:調教自慰経験 < D
	I |= 2
;調教自慰経験が不足
SIF EXP:野外露出経験 < E
	I |= 2

;恥情の珠は足りている？
SIF JUEL:恥情 < A
	I |= 1

IF I == 0
	RETURN 1
ELSE
	RETURN 0
ENDIF

