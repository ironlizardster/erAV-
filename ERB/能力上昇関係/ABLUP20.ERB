;サドッ気のLvUP処理とその可否判定
;eratohoA ver1,204のスクリプトをベースに処理を簡略化

;-------------------------------------------------
;サドッ気のLvUP
;-------------------------------------------------
@ABLUP20
DRAWLINE
;PRINTL 奴隷のサドっ気を高めます
;PRINTL サドっ気が高いと、誰かに苦痛を与えることで欲情が高まります
;DRAWLINE
;サドッ気はLv5が上限
;[マゾ]が付いている場合はLv3が上限
;淫魔は両方こなせる由
;[倒錯的][サド][逆襲]が付いている場合はLv10まで解放
IF ABL:サドっ気 >= 3 && TALENT:マゾ == 1 && TALENT:淫魔 == 0
	PRINTFORMW 素質【%TALENTNAME:[[TALENT:マゾ]]%】があるためこれ以上UPできません
	RETURN 0
ELSEIF ABL:サドっ気 >= 5 && (TALENT:倒錯的 == 0 && TALENT:サド == 0 && TALENT:逆襲 == 0)
	PRINTW これ以上UPするには素質が必要です
	RETURN 0
;サドっ気＋マゾっ気は11以上にならない
ELSEIF ABL:サドっ気 + ABL:マゾっ気 >= 10 && TALENT:淫魔 == 0
	PRINTFORMW サドっ気({ABL:サドっ気})＋マゾっ気({ABL:マゾっ気})の上限は10です
	RETURN 0
ELSEIF ABL:サドっ気 >= 10
	PRINTW 既にMAXです
	RETURN 0
ENDIF

;必要な欲情の珠
A = 0
;必要な嗜虐快楽経験回数
B = 0
;必要な異常経験回数
C = 0

;条件別にＯＫかダメかを記録する
;欲情の珠による可否（I=0:可、I&1:珠不足、I&2:経験不足、I&4:能力不足）
I = 0

CALL CAN_ABLUP20

;欲望がサドっ気＋１レベルでないといけない
PRINTFORML %ABLNAME:[[ABL:欲望]]%{ABL:サドっ気+1}LV以上(現在{ABL:欲望}LV)かつ

;ＬＶ３から４、４から５に上げるときは異常経験必要（素質：[倒錯的][サド][嫉妬][小悪魔]なら無視できる）
SIF C > 0
	PRINTFORML %EXPNAME:[[EXP:異常経験]]%{C}以上（現在{EXP:異常経験}）かつ

PRINTFORM [0] - %PALAMNAME:[[PALAM:欲情]]%の珠×{JUEL:欲情}/{A} ……
IF I == 0
	PRINT ＯＫ
ELSE
	SIF I & 1
		PRINT 珠不足 
	SIF I & 2
		PRINT 経験不足 
	SIF I & 4
		PRINT 能力不足 
ENDIF
PRINTL 
;嗜虐快楽経験
SIF B > 0
	PRINTFORML 　　　%EXPNAME:[[EXP:嗜虐快楽経験]]%　{EXP:嗜虐快楽経験}/{B}

PRINTL [100] - やめる

INPUT
IF RESULT != 0 && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL 条件を満たしていません
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:サドっ気 += 1

JUEL:欲情 -= A

PRINTFORML %ABLNAME:[[ABL:サドっ気]]%のレベルが{ABL:サドっ気}になりました

RETURN 0

;-------------------------------------------------
;マゾっ気のLvUP可否判定
;-------------------------------------------------
@CAN_ABLUP20
;サドッ気はLv10が上限
SIF ABL:サドっ気 >= 5 && (TALENT:倒錯的 == 0 && TALENT:サド == 0 && TALENT:逆襲 == 0)
	RETURN 0
SIF ABL:サドっ気 >= 10
	RETURN 0
SIF ABL:サドっ気 >= 3 && TALENT:マゾ == 1 && TALENT:淫魔 == 0
	RETURN 0
SIF ABL:サドっ気 + ABL:マゾっ気 >= 10 && TALENT:淫魔 == 0
	RETURN 0

;必要な欲情の珠
A = 0
;必要な嗜虐快楽経験回数
B = 0
;必要な異常経験回数
C = 0

;条件別にＯＫかダメかを記録する
;欲情の珠による可否（I=0:可、I&1:珠不足、I&2:経験不足、I&4:能力不足）
I = 0

IF ABL:サドっ気 == 0
	A = 100
	B = 5
ELSEIF ABL:サドっ気 == 1
	A = 500
	B = 20
ELSEIF ABL:サドっ気 == 2
	A = 1500
	B = 50
ELSEIF ABL:サドっ気 == 3
	A = 3000
	B = 120
ELSEIF ABL:サドっ気 == 4
	A = 5000
	B = 300
ELSEIF ABL:サドっ気 == 5
	A = 8000
	B = 600
ELSEIF ABL:サドっ気 == 6
	A = 12000
	B = 1500
ELSEIF ABL:サドっ気 == 7
	A = 15000
	B = 3000
ELSEIF ABL:サドっ気 == 8
	A = 25000
	B = 5000
ELSEIF ABL:サドっ気 == 9
	A = 30000
	B = 8000
ENDIF

;一線越えない
IF TALENT:一線越えない
	IF ABL:サドっ気 == 3
		TIMES C , 1.50
		TIMES D , 1.50
		TIMES E , 1.50
	ELSEIF ABL:サドっ気 == 4
		TIMES C , 2.00
		TIMES D , 2.00
		TIMES E , 2.00
	ELSEIF ABL:サドっ気 == 5
		TIMES C , 2.50
		TIMES D , 2.50
		TIMES E , 2.50
	ELSEIF ABL:サドっ気 >= 6
		TIMES C , 3.00
		TIMES D , 3.00
		TIMES E , 3.00
	ENDIF
ENDIF
IF TALENT:淫魔
	TIMES A , 0.10
	TIMES B , 0.10
	TIMES C , 0.10
	TIMES D , 0.10
	TIMES E , 0.10
ENDIF

;ＬＶ３から４、４から５、７から８に上げるときは異常経験必要（素質：[倒錯的][サド][嫉妬][小悪魔]なら無視できる）
SIF (ABL:サドっ気 == 3 || ABL:サドっ気 == 4 || ABL:サドっ気 == 7) && TALENT:倒錯的 == 0 && TALENT:サド == 0 && TALENT:嫉妬 == 0 && TALENT:小悪魔 == 0
	C = ABL:サドっ気 - 2

;必要な絶頂経験数は全レベル1
G = 1

;臆病
IF TALENT:臆病
	TIMES A , 1.50
ENDIF
;反抗的
IF TALENT:ナマイキ
	TIMES A , 0.90
	TIMES B , 0.90
ENDIF
;気丈
SIF TALENT:気丈
	TIMES A , 0.90
;大人しい
SIF IS_大人しい(TARGET)
	TIMES A , 1.20
;生意気
IF IS_活発(TARGET)
	TIMES A , 0.90
	TIMES B , 0.90
ENDIF

;プライド高い
IF IS_プライド高い(TARGET)
	TIMES A , 0.90
	TIMES B , 0.90
;プライド低い
ELSEIF IS_プライド低い(TARGET)
	TIMES A , 1.10
	TIMES B , 1.10
ENDIF

;自制心
IF TALENT:自制心
	TIMES A , 1.20
	TIMES B , 1.20
ENDIF
;無関心
IF TALENT:クール
	TIMES A , 1.20
	TIMES B , 1.20
ENDIF
;感情乏しい
IF TALENT:感情乏しい
	TIMES A , 1.50
	TIMES B , 1.20
ENDIF
;好奇心
IF TALENT:好奇心
	TIMES A , 0.90
	TIMES B , 0.90
ENDIF
;悲観的
SIF IS_悲観的(TARGET)
	TIMES A , 1.10
;目立ちたがり
IF TALENT:目立ちたがり
	TIMES A , 0.90
	TIMES B , 0.90
ENDIF
;貞操観念
IF IS_貞操観念(TARGET)
	TIMES A , 1.10
	TIMES B , 1.10
;貞操無頓着
ELSEIF IS_貞操無頓着(TARGET)
	TIMES A , 0.95
	TIMES B , 0.95
ENDIF

;抑圧
IF IS_抑圧(TARGET)
	TIMES A , 0.95
	TIMES B , 0.95
;解放
ELSEIF IS_解放(TARGET)
	TIMES A , 0.90
	TIMES B , 0.90
ENDIF

;男嫌いor女嫌い
IF TALENT:ボーイッシュ || TALENT:男性不信
	TIMES A , 0.95
	TIMES B , 0.95
ENDIF

;痛みに弱い
IF IS_痛みに弱い(TARGET)
	TIMES A , 1.20
	TIMES B , 1.20
;痛みに強い
ELSEIF IS_痛みに強い(TARGET)
	TIMES A , 0.90
	TIMES B , 0.90
ENDIF

;淫乱
IF TALENT:淫乱
	TIMES A , 0.80
	TIMES B , 0.80
	TIMES C , 0.80
	TIMES D , 0.80
	TIMES E , 0.80
ENDIF
;淫乱
IF TALENT:[[TALENT:ONLY ONE EMPRESS]]
	TIMES A , 0.60
	TIMES B , 0.60
	TIMES C , 0.60
	TIMES D , 0.60
	TIMES E , 0.60
ENDIF
;色情狂
IF TALENT:絶倫
	TIMES A , 0.40
	TIMES B , 0.40
	TIMES C , 0.40
	TIMES D , 0.40
	TIMES E , 0.40
ENDIF
;倒錯的
IF TALENT:倒錯的
	TIMES A , 0.80
	TIMES B , 0.80
ENDIF
;サド
IF TALENT:サド
	TIMES A , 0.50
	TIMES B , 0.50
ENDIF
;マゾ
IF TALENT:マゾ
	TIMES A , 1.20
	TIMES B , 1.20
ENDIF
;嫉妬
IF TALENT:嫉妬
	TIMES A , 0.80
	TIMES B , 0.80
ENDIF
;小悪魔
IF TALENT:小悪魔
	TIMES A , 0.80
	TIMES B , 0.80
ENDIF
;狂気
IF TALENT:狂気
	TIMES A , 0.50
	TIMES B , 0.50
ENDIF
;崩壊
IF TALENT:崩壊
	TIMES A , 2.00
	TIMES B , 2.00
ENDIF
;小悪魔
IF TALENT:お姫様
	TIMES A , 0.75
	TIMES B , 0.75
ENDIF
;本性はドSなかなで
IF NO:TARGET == [[キャラ:宮間かなで]]
	TIMES A , 0.40
	TIMES B , 0.40
	TIMES C , 0.40
	TIMES D , 0.40
	TIMES E , 0.40
ENDIF
;本性はドMなカナ
IF NO:TARGET == [[キャラ:宮間カナ]]
	TIMES A , 2.20
	TIMES B , 2.20
	TIMES C , 2.20
	TIMES D , 2.20
	TIMES E , 2.20
ENDIF

;欲情の珠が不足
SIF JUEL:欲情 < A
	I |= 1

;嗜虐快楽経験が不足
SIF EXP:嗜虐快楽経験 < B
	I |= 2

;異常経験が不足
SIF EXP:異常経験 < C
	I |= 2

;欲望がサドっ気＋１レベルでないといけない
SIF ABL:欲望 < ABL:サドっ気 + 1
	I |= 4

IF I == 0
	RETURN 1
ELSE
	RETURN 0
ENDIF

