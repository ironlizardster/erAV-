@CHARACTER_EDIT_INPUT_NAME(対象, 入力値)
#DIM 対象
#DIM 入力値
#DIMS 名前
#DIMS ルビ

;手入力
IF 入力値 % 100  == 0
	PRINTFORML 文字列を入力
	INPUTS
	名前 = %RESULTS%
	IF 入力値 / 100 == 1
		NAME:対象 = %名前%
	ELSEIF 入力値 / 100 == 2
		CALLNAME:対象 = %名前%
	ELSEIF 入力値 / 100 == 3
		NICKNAME:対象 = %名前%
	ENDIF
;消去
ELSEIF 入力値 % 100 == 2
	IF 入力値 / 100 == 1
		NAME:対象 =
	ELSEIF 入力値 / 100 == 2
		CALLNAME:対象 =
	ELSEIF 入力値 / 100 == 3
		NICKNAME:対象 =
	ENDIF
ENDIF
