PRINTBUTTON "[入力]", 100
PRINTBUTTON " [消去]", 102
PRINTL 
PRINTFORML 呼び名 -- %CALLNAME:対象%
PRINTBUTTON "[入力]", 200
PRINTBUTTON " [消去]", 202
PRINTL 
PRINTFORML 芸名 -- %NICKNAME:対象%
PRINTBUTTON "[入力]", 300
PRINTBUTTON " [消去]", 302
