@PRINT_HAIRSTYLE_TARGET
CALL PRINT_HAIRSTYLE(TARGET)
PRINT にしています

;===========================================================
;髪型の処理
;===========================================================
@PRINT_HAIRSTYLE(CHARA_NO)
#DIM CHARA_NO
PRINTFORM %HAIRCOLOR_STRING(CFLAG:CHARA_NO:髪色,CFLAG:CHARA_NO:染髪済)%
IF CFLAG:CHARA_NO:染髪済 == 1 && CFLAG:CHARA_NO:髪色 != 9
	PRINT に染めた
ELSE
	PRINT の
ENDIF
IF NO:CHARA_NO == [[キャラ:新島みひろ]] || NO:CHARA_NO == [[キャラ:碧野乃衣瑠]] || NO:CHARA_NO == [[キャラ:浅神智子]] || NO:CHARA_NO == [[キャラ:後藤彩香]]
	PRINT くせっ毛を
ELSEIF CFLAG:CHARA_NO:髪型 == 6 && TALENT:CHARA_NO:ColorfulPureGirls == 0
	PRINT 髪を
ENDIF
PRINTFORM %CHARA_HAIRSTYLE_STRING(CHARA_NO)%


@CHARA_HAIRSTYLE_STRING(INDEX)
#FUNCTIONS
#DIM INDEX

RETURNF HAIRSTYLE_STRING(CFLAG:INDEX:髪型)


;===========================================================
;髪型の処理
;===========================================================
@HAIRSTYLE_STRING(髪型)
#FUNCTIONS
#DIM 髪型

SIF 髪型 == 0
	RETURNF "ショートヘア"
SIF 髪型 == 1
	RETURNF "セミロング"
SIF 髪型 == 2
	RETURNF "ショートボブ"
SIF 髪型 == 3
	RETURNF "ポニーテール"
SIF 髪型 == 4
	RETURNF "ツインテール"
SIF 髪型 == 5
	RETURNF "ストレートロング"
SIF 髪型 == 6
	RETURNF "アップ"
SIF 髪型 == 7
	RETURNF "ゆるふわパーマ"
SIF 髪型 == 8
	RETURNF "ロングウェーブ"
SIF 髪型 == 9
	RETURNF "三つ編み"
SIF 髪型 == 10
	RETURNF "ツーサイドアップ"
SIF 髪型 == 11
	RETURNF "ツインドリルテール"
SIF 髪型 == 12
	RETURNF "お団子ヘア"
SIF 髪型 == 99
	RETURNF "昇天ペガサスＭＩＸ盛り"

RETURNF "ショートヘア"

;===========================================================
;髪色の処理
;===========================================================
@HAIRCOLOR_STRING(色,染髪済)
#FUNCTIONS
#DIM 色
#DIM 染髪済

SIF 色 == 0
	RETURNF "黒色"
SIF 色 == 1
	RETURNF "茶色"
SIF 色 == 2
	RETURNF "金色"
SIF 色 == 3
	RETURNF "銀色"
SIF 色 == 4
	RETURNF "赤色"
SIF 色 == 5
	RETURNF "青色"
SIF 色 == 6
	RETURNF "緑色"
SIF 色 == 7
	RETURNF "ピンク色"
SIF 色 == 8
	RETURNF "紫色"
SIF 色 == 9 && !染髪済
	RETURNF "白色"
SIF 色 == 9 && 染髪済
	RETURNF "プラチナブラウン色"
SIF 色 == 10
	RETURNF "栗色"
;特定キャラ専用髪色
SIF 色 == 11
	RETURNF "薄紫色"
SIF 色 == 12
	RETURNF "真珠色"
SIF CFLAG:髪色 == 13
	RETURNF "赤紫色"
SIF CFLAG:髪色 == 14
	RETURNF "アッシュブラウン色"

RETURNF "黒"

