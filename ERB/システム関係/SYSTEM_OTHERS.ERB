;===========================================================
;危険日判定
;===========================================================
@SYSTEM_KIKENBI

REPEAT CHARANUM
	IF COUNT == 0
		CONTINUE
	ELSEIF TALENT:COUNT:オトコ || TALENT:COUNT:妊娠 || TALENT:COUNT:育児中
		CFLAG:COUNT:安全日 = 0 
		CONTINUE
	ELSE
		IF CFLAG:COUNT:安全日 > 5
			CFLAG:COUNT:危険日 = 0
		ELSEIF CFLAG:COUNT:安全日 < 0
			CFLAG:COUNT:安全日 = 30
			CFLAG:COUNT:危険日 = 0
		ELSE
			CFLAG:COUNT:危険日 = 1
		ENDIF
		CFLAG:COUNT:安全日 --
	ENDIF
REND

