;-------------------------------------------------
;絶頂時の成長処理
;-------------------------------------------------
@CHECK_IWS
;バスト成長計算
U = 0
IF B
	U = ((B + ABL:Ｂ感覚) * FLAG:ＩＷＳなし)
		;絶壁持ちは成長しない。それが自然の摂理。
		SIF IS_絶壁(TARGET)
			U = 0
;バスト成長処理
	BASE:バスト += U
;バスト成長表示
	DRAWLINE
	IF U % 100 < 10
		PRINTFORML %CALLNAME:TARGET%のバストは{U / 100}.0{U % 100}cm成長した。
	ELSE
		PRINTFORML %CALLNAME:TARGET%のバストは{U / 100}.{U % 100}cm成長した。
	ENDIF
	CALL BUST_RANKUP
ENDIF

;-------------------------------------------------
;部位のランク変化処理
;-------------------------------------------------
@BUST_RANKUP
CALL CHECK_CUPSIZE
IF (CFLAG:カップサイズ > 1 && IS_絶壁(TARGET)) || (CFLAG:カップサイズ > 3 && IS_貧乳(TARGET)) || (CFLAG:カップサイズ > 5 && !IS_チチユレ(TARGET)) || (CFLAG:カップサイズ > 7  && IS_巨乳(TARGET)) || (CFLAG:カップサイズ > 10 && IS_爆乳(TARGET)) || (CFLAG:カップサイズ > 14 && IS_超乳(TARGET)) || (CFLAG:カップサイズ > 19 && IS_魔乳(TARGET))
	PRINTL ＊バストランクアップ！＊
	PRINTFORM %CALLNAME:TARGET%は【%GET_STR_乳房(TARGET)%】から
	TALENT:T:乳房++
	PRINTFORMW 【%GET_STR_乳房(TARGET)%】になった。
ENDIF
	
@BUST_RANKDOWN
CALL CHECK_CUPSIZE
IF (CFLAG:カップサイズ <= 19 && IS_神乳(TARGET)) || (CFLAG:カップサイズ <= 14 && IS_魔乳(TARGET)) || (CFLAG:カップサイズ <= 10 && IS_超乳(TARGET)) || (CFLAG:カップサイズ <= 7  && IS_爆乳(TARGET)) || (CFLAG:カップサイズ <= 5 && IS_巨乳(TARGET)) || (CFLAG:カップサイズ <= 3 && !IS_ナイチチ(TARGET)) || (CFLAG:カップサイズ <= 1 && IS_貧乳(TARGET))
	PRINTL ＊バストランクダウン！＊＊
	PRINTFORM %CALLNAME:TARGET%は【%GET_STR_乳房(TARGET)%】から
	TALENT:T:乳房--
	PRINTFORMW 【%GET_STR_乳房(TARGET)%】になった。
ENDIF

;-------------------------------------------------
;魔改造時のバストカップ変更処理
;-------------------------------------------------
;完全に別仕様。カップサイズを１個引き上げなので元より効果少。ただし無制限。

@MODIFY_BUSTUP_IWS
;変更対象を一時TARGETに。動作的には不安だが･･･
A = TARGET
TARGET = RESULT

;価格決定。育成システムがあるので値段は高め。
CALL CHECK_CUPSIZE
C = (20000 + (CFLAG:カップサイズ * 3000))

$INPUT_LOOP

PRINTFORML %NAME:TARGET%を巨乳化させるには、{C}ポイント必要です
PRINTFORML %NAME:TARGET%を巨乳化しますか？

PRINTL  [0] - はい
PRINTL  [1] - やめる

INPUT

IF RESULT == 1
	TARGET = A
	RETURN 0
ELSEIF RESULT == 0
	IF MONEY < C
		PRINTW お金が足りません
		TARGET = A
		RETURN 0
	ENDIF
	;カップサイズが１個上がるまで1cmずつ成長させる。
	P = CFLAG:カップサイズ
	$LOOP_BUSTUP
	IF CFLAG:カップサイズ == P
		BASE:バスト += 1
		CALL CHECK_CUPSIZE
		GOTO LOOP_BUSTUP
	ELSE
		PRINTFORM 《%NAME:TARGET%のバストは%TEXTS("0.01", BASE:バスト)%cm(
		CALL SHOW_CUPSIZE
		PRINTFORMW カップ)になった》
		CALL BUST_RANKUP
		P = 0
		MONEY -= C
		TARGET = A
	ENDIF
ELSE
	GOTO INPUT_LOOP
ENDIF

@MODIFY_BUSTDOWN_IWS
;変更対象を一時TARGETに。動作的には不安だが･･･
A = TARGET
TARGET = RESULT
CALL CHECK_CUPSIZE

;無いモノは減らせない
IF CFLAG:カップサイズ <= 1
	PRINTFORMW %NAME:TARGET%のバストはこれ以上小さくなりません。
	TARGET = A
	RETURN 0
ENDIF

;価格決定。基本的には安い。
C = 10000
	;貧乳は希少価値。
	SIF CFLAG:カップサイズ <= 4 
		C = 160000 - (CFLAG:カップサイズ * 30000)

$INPUT_LOOP

PRINTFORML %NAME:TARGET%を貧乳化させるには、{C}ポイント必要です
PRINTFORML %NAME:TARGET%を貧乳化しますか？

PRINTL  [0] - はい
PRINTL  [1] - やめる

INPUT

IF RESULT == 1
	TARGET = A
	RETURN 0
ELSEIF RESULT == 0
	IF MONEY < C
		PRINTW お金が足りません
		TARGET = A
		RETURN 0
	ENDIF
	;カップサイズが１個下がるまで1cmずつ縮ませる。
	P = CFLAG:カップサイズ
	$LOOP_BUSTDOWN
	IF CFLAG:カップサイズ == P
		BASE:バスト -= 1
		CALL CHECK_CUPSIZE
		GOTO LOOP_BUSTDOWN
	ELSE
		PRINTFORM 《%NAME:TARGET%のバストは%TEXTS("0.01", BASE:バスト)%cm(
		CALL SHOW_CUPSIZE
		PRINTFORMW カップ)になった》
		CALL BUST_RANKDOWN
		P = 0
		MONEY -= C
		TARGET = A
	ENDIF
ELSE
	GOTO INPUT_LOOP
ENDIF
;-------------------------------------------------
;妊娠・出産時のスリーサイズ変更処理
;-------------------------------------------------
@GROW_3_SIZE_IWS
;毎日ちょっとずつ成長する。

A = TARGET
TARGET = COUNT

;体重増加
IF TALENT:妊娠
	U = 10 + RAND:5
	BASE:体重 += U
	CFLAG:妊娠増加体重 += U
ENDIF

;バスト成長
U = 15 + RAND:5
;IWSがオンの場合成長値にボーナスが付く。
;ボーナス分は出産育児後にも維持される。
BASE:バスト += U + (FLAG:ＩＷＳなし * (RAND:5 + 5))
CFLAG:妊娠増加バストIWS除く += U
CALL BUST_RANKUP

;ウェスト成長
IF TALENT:妊娠
	U = 70 + RAND:20
	BASE:ウェスト += U
	CFLAG:妊娠増加ウェスト += U
ENDIF

;ヒップ成長
IF TALENT:妊娠
	U = 10 + RAND:5
	BASE:ヒップ += U
	CFLAG:妊娠増加ヒップ += U
ENDIF

TARGET = A

@REVERSE_3_SIZE_IWS
;引き下げは一気に行う

A= TARGET
TARGET = C

;体重減少
BASE:体重 -= CFLAG:妊娠増加体重
CFLAG:妊娠増加体重 = 0

;バスト縮小
IF TALENT:育児中 == 1
ELSE
	BASE:バスト -= CFLAG:妊娠増加バストIWS除く
	CFLAG:妊娠増加バストIWS除く = 0
	;複数ランクダウンが有り得る
	CALL BUST_RANKDOWN
	CALL BUST_RANKDOWN

ENDIF
;ウェスト縮小
BASE:ウェスト -= CFLAG:妊娠増加ウェスト
CFLAG:妊娠増加ウェスト = 0

;ヒップ縮小
BASE:ヒップ -= CFLAG:妊娠増加ヒップ
CFLAG:妊娠増加ヒップ = 0

TARGET = A

