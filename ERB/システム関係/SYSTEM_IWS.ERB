@CHECK_CUPSIZE
;Sはカップサイズ用変数、Xはバスト補正値、Yはウェスト補正値、Zは身長補正値
X = ((((BASE:バスト * 100) - (BASE:身長 * 54)) * 100) / 250)
Y = ((((BASE:身長 * 38) - (BASE:ウェスト * 100)) * 100) / 342)
;妊娠時は妊娠発覚時のウェストから計算
SIF TALENT:妊娠
	Y = ((((BASE:身長 * 38) - ((BASE:ウェスト - (CFLAG:妊娠増加ウェスト / 100)) * 100)) * 100) / 342)
Z = ((((BASE:身長 * 100) - 15880) * 100) / 2300)
S = X + Y + Z
CFLAG:カップサイズ = 0
	$CHECK_LOOP
	IF S > -450
		CFLAG:カップサイズ += 1
		S -= 100
		GOTO CHECK_LOOP
	ELSE
		X = 0
		Y = 0
		Z = 0
		S = 0
	ENDIF


