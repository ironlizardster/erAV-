REPEAT CHARANUM
	SIF COUNT == MASTER
		CONTINUE
	SIF BASE:COUNT:身長 == 0
		PRINTFORML [{COUNT}] - %CALLNAME:COUNT%
REND
DRAWLINE
PRINTL  [999] - やめる

INPUT
IF RESULT == 999
		RETURN 0
ELSEIF BASE:RESULT:身長 == 0

	A = TARGET
	TARGET = RESULT

	;身長
	$INPUT_LOOP_1
	PRINTFORML %NAME:TARGET%の身長を設定してください(140-180)
	INPUT
	IF RESULT < 140 || RESULT > 180
		PRINTL 不適切な値です。再設定してください
		GOTO INPUT_LOOP_1
	ELSE
		B = RESULT
		BASE:身長 = RESULT
	ENDIF

	;体重
	$INPUT_LOOP_2
	PRINTFORML %NAME:TARGET%の体重を設定してください({B * 25 / 100}-{B * 30 / 100}) 
	INPUT
	IF RESULT < B * 25 / 100 || RESULT > B * 30 / 100
		PRINTL 不適切な値です。再設定してください
		GOTO INPUT_LOOP_2
	ELSE
		BASE:体重 = RESULT
	ENDIF

	;バスト
	$INPUT_LOOP_3
	PRINTFORML %NAME:TARGET%のバストを設定してください({B * 45 / 100}-{B * 55 / 100})
	INPUT
	IF RESULT < B * 45 / 100 || RESULT > (B * 55 / 100)
		PRINTL 不適切な値です。再設定してください
		GOTO INPUT_LOOP_3
	ELSE
		C = RESULT
		BASE:バスト = RESULT
	ENDIF

	;ウェスト
	$INPUT_LOOP_4
	PRINTFORML %NAME:TARGET%のウェストを設定してください({B * 35 / 100}-{B * 40 / 100})
	INPUT
	IF RESULT < B * 35 / 100 || RESULT > B * 40 / 100
		PRINTL 不適切な値です。再設定してください
		GOTO INPUT_LOOP_4
	ELSE
		BASE:ウェスト = RESULT
	ENDIF

	;ヒップ
	$INPUT_LOOP_5
	PRINTFORML %NAME:TARGET%のヒップを設定してください({C * 95 / 100}-{C * 105 / 100})
	INPUT
	IF RESULT < C * 95 / 100 || RESULT > C * 105 / 100
		PRINTL 不適切な値です。再設定してください
		GOTO INPUT_LOOP_5
	ELSE
		BASE:ヒップ = RESULT
	ENDIF
	
	;設定の確認
	PRINTFORML %NAME:TARGET%のスリーサイズ設定は以下のとおりです
	CALL SHOW_INFO_BODYSIZE
	PRINTL これでよろしいですか？
	PRINTL [0] - はい
	PRINTL [1] - 設定しなおす
	PRINTL [2] - このキャラの設定をやめる
	$INPUT_LOOP_6
	INPUT
	IF RESULT == 0
		PRINTFORMW %NAME:TARGET%のスリーサイズを設定しました
		TARGET = A
		GOTO INPUT_LOOP
	ELSEIF RESULT == 1
		PRINTW 設定をやり直します
		GOTO INPUT_LOOP_1
	ELSEIF RESULT == 2
		PRINTW このキャラの設定を中止します
		BASE:身長 = 0
		BASE:体重 = 0
		BASE:バスト = 0
		BASE:ウェスト = 0
		BASE:ヒップ = 0
		TARGET = A
		GOTO INPUT_LOOP
	ELSE
		GOTO INPUT_LOOP_6
	ENDIF
ELSE
	GOTO INPUT_LOOP
ENDIF

