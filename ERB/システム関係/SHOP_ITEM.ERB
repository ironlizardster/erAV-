;=================================================
;アイテム購入・売却処理画面
;=================================================
@ITEM_SHOP

MAX_LINE = 40
CALL COLUMNCREATE, 0
CALL SHOW_SHOP_ITEMMENU

RETURN COMMAND_GO_BACK_TO_MAIN

@PRINT_ITEMS(ARGS)
#FUNCTIONS
LOCALS '= ""
SELECTCASE ARGS
	CASE "消耗品"
		FOR LOCAL, 50, 100
			SIF ITEMNAME:(LOCAL) == ""
				CONTINUE
			LOCALS += @"[%ITEMNAME:(LOCAL)%X{ITEM:(LOCAL), 2}]"
		NEXT
	CASE "調教道具"
		FOR LOCAL, 100, 200
			SIF ITEMNAME:(LOCAL) == ""
				CONTINUE
			SIF ITEM:(LOCAL)
				LOCALS += @"[%ITEMNAME:(LOCAL)%Lv{ITEM:(LOCAL)}]"
		NEXT
ENDSELECT
RETURNF LOCALS
