SELECTCASE RESULT
	CASE COMMAND_GO_BACK
		RETURN COMMAND_GO_BACK
	CASE RESULT < 0, RESULT >= CHARANUM, RESULT == 0, BASE:RESULT:体力 < 1
		;主人公、臨死中のキャラは排除
		RESTART
	CASE TALENT:RESULT:妊娠 || TALENT:RESULT:育児中
		PRINTFORMW 妊娠または育児中です
		RESTART
	CASEELSE
		RETURN RESULT
ENDSELECT

