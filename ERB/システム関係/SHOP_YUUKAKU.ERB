@WORK_RECEPTION

PRINTFORML (現在の貢献度：{EXP:MASTER:貢献度})

;接待可能なキャラの判定
A = 0
REPEAT CHARANUM
	;主人は除外
	SIF COUNT == 0
		CONTINUE
	;労役中だと不可
	SIF TIME == 1 && CFLAG:COUNT:営業内容 != 0
		CONTINUE
	;売却可でないと不可
	SIF CFLAG:COUNT:売却助手可能 == 0
		CONTINUE
	;体力が500未満だと不可
	SIF BASE:COUNT:体力 < 500
		CONTINUE
	;反発刻印が付いていると不可
	SIF MARK:COUNT:反発刻印 >= 1
		CONTINUE
	;従順と欲望の合計値が8以下だと不可
	SIF ABL:COUNT:信頼 + ABL:COUNT:欲望 < 8
		CONTINUE
	;臨月・育児中だと不可
	SIF CFLAG:COUNT:出産日 - 2 <= DAY && TALENT:COUNT:妊娠	
		CONTINUE
	SIF TALENT:COUNT:育児中
		CONTINUE
	;素質【オトコ】が付いていると不可
	SIF TALENT:COUNT:オトコ
		CONTINUE

	A += 1
REND

IF A == 0
	PRINTFORML 接待を行える奴隷がいません
	WAIT
	RETURN 999
ENDIF

