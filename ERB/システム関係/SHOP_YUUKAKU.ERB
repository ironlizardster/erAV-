;-----------------------------------------------------------
;通常営業の営業内容を決定します
;-----------------------------------------------------------
@WORK_NORMAL

$INPUT_LOOP_0

DRAWLINE
PRINTL 誰の営業状況を変更しますか？
CALL LIFE_LIST_NEW,LL_MODE_娼館
IF RESULT == COMMAND_GO_BACK
	RETURN COMMAND_GO_BACK
ELSEIF RESULT < 0 || RESULT >= CHARANUM
	GOTO INPUT_LOOP_0
ENDIF

;以下営業させられる条件
;主人だと不可
IF RESULT == MASTER
	PRINTL 主人は営業を行えません
	WAIT
	GOTO INPUT_LOOP_0
ENDIF
;売却可でないと不可
IF CFLAG:RESULT:売却助手可能 == 0
	PRINTL 調教不足です。営業させるにはもっと育ててください
	WAIT
	GOTO INPUT_LOOP_0
ENDIF
;体力が500未満だと不可
IF BASE:RESULT:体力 < 500
	PRINTL 衰弱して、とても営業を行えるような状態ではありません
	WAIT
	GOTO INPUT_LOOP_0
ENDIF
;反発刻印2以上が付いていると不可
IF MARK:RESULT:反発刻印 >= 2
	PRINTL 反発感情が強く、営業を行なえません
	WAIT
	GOTO INPUT_LOOP_0
ENDIF
;従順と欲望の合計値が6以下だと不可
B = ABL:RESULT:信頼
B += ABL:RESULT:欲望
IF B < 6
	PRINTL 能力不足です。営業をさせるにはもっと育ててください
	WAIT
	GOTO INPUT_LOOP_0
ENDIF
;臨月・育児中だと不可
IF CFLAG:RESULT:出産日 - 2 <= DAY && TALENT:RESULT:妊娠
	PRINTL 身重で、とても営業を行えるような状態ではありません
	WAIT
	GOTO INPUT_LOOP_0
ENDIF
IF TALENT:RESULT:育児中
	PRINTL 育児中のため、営業を行えません
	WAIT
	GOTO INPUT_LOOP_0
ENDIF
;素質【オトコ】が付いていると不可
;IF TALENT:RESULT:オトコ
;	PRINTL 残念ながら、男娼には未対応です
;	WAIT
;	GOTO INPUT_LOOP_0
;ENDIF

TARGET = RESULT

;V使用不可フラグのチェック
;オトコである
IF TALENT:オトコ
	CFLAG:売春Ｖ不能 = 1
;貞操帯着用
ELSEIF CFLAG:特別コスタイプ == 79 && (CFLAG:着衣状態 & 64)
	CFLAG:売春Ｖ不能 = 1
ELSE
	CFLAG:売春Ｖ不能 = 0
ENDIF

;以下営業内容の選択

$INPUT_LOOP_1

DRAWLINE
PRINTFORML %CALLNAME:TARGET%にどんな通常営業をさせますか？
DRAWLINE
;会話営業・奉仕営業は条件なしで実行可能
SIF CFLAG:営業内容 != 0
	PRINTL  [0] - 通常営業させない
PRINTL  [1] - 会話営業
PRINTL  [2] - 奉仕営業
;Ａ営業の条件：Ａ感覚が3以上かつ、屈服刻印が2以上で個室拡張済み
IF MARK:屈服刻印 >= 2 && (FLAG:娼館拡張 & 1) 
	IF TALENT:Ａ処女
		PRINTL  [3] - Ａ営業 (Ａ処女)
	ELSE
		PRINTL  [3] - Ａ営業
	ENDIF
ENDIF
;Ｖ営業の条件：オトコでなく処女でなくかつ、Ｖ感覚が3以上または娼婦持ちかつ、屈服刻印2以上で個室拡張済み
IF TALENT:オトコ == 0 && MARK:屈服刻印 >= 2 && (FLAG:娼館拡張 & 1) 
	;貞操帯を付けているとダメ
	IF CFLAG:特別コスタイプ != 79 || (CFLAG:着衣状態 & 64) == 0
		IF TALENT:処女
			PRINTL  [4] - Ｖ営業 (処女)
		ELSE
			PRINTL  [4] - Ｖ営業
		ENDIF
	ENDIF
ENDIF
;ＳＭ営業の条件：オトコでなく、技巧が3以上かつ、屈服刻印が3以上で、個室とＳＭグッズ拡張済み
IF TALENT:オトコ == 0 && ABL:技巧 >=3 && MARK:屈服刻印 >= 3 && (FLAG:娼館拡張 & 1) && (FLAG:娼館拡張 & 2)
	;貞操帯を付けているとダメ
	SIF CFLAG:特別コスタイプ != 79 || (CFLAG:着衣状態 & 64) == 0
		PRINTL  [5] - ＳＭ営業	
ENDIF
;出張営業の条件：オトコでなく、常連客が付いており、護衛を拡張済み
IF TALENT:オトコ == 0 && TALENT:[[TALENT:常連客]] == 1 && (FLAG:娼館拡張 & 4) != 0
	;貞操帯を付けているとダメ
	SIF CFLAG:特別コスタイプ != 79 || (CFLAG:着衣状態 & 64) == 0
		PRINTL  [6] - 出張営業
ENDIF
IF CFLAG:営業内容 >= 3
	IF CFLAG:営業コンドーム
		PRINTL  [9] - コンドームを使用させない
	ELSE
		PRINTL  [9] - コンドームを使用させる
	ENDIF
ENDIF
PRINTFORML  [10] - 労役妊娠回避 (\@ CFLAG:労役妊娠回避 ? ON # OFF \@)
DRAWLINE
PRINTL  [999] - 戻る
INPUT

IF RESULT == 999
	GOTO INPUT_LOOP_0
ELSEIF RESULT == 0
	PRINTFORML 《%NAME:TARGET%に通常営業をやめさせます》
	WAIT
	CFLAG:営業内容 = 0
	CFLAG:営業コンドーム = 0
ELSEIF RESULT == 1
	PRINTFORML 《%NAME:TARGET%を地元の酒場で会話営業で稼がせます》
	WAIT
	CFLAG:営業内容 = 1
	CFLAG:営業コンドーム = 0
ELSEIF RESULT == 2
	IF (FLAG:娼館拡張 & 32) == 0
		PRINTFORML 《%NAME:TARGET%に奉仕営業で稼がせます》
		WAIT
		CFLAG:営業内容 = 2
		CFLAG:営業コンドーム = 0
	ELSE
		CALL SOUP_WORK
	ENDIF
ELSEIF RESULT == 3 && MARK:屈服刻印 >= 2 && (FLAG:娼館拡張 & 1)
	PRINTFORML 《%NAME:TARGET%にＡ営業で稼がせます》
	WAIT
	CFLAG:営業内容 = 3
ELSEIF RESULT == 4 && TALENT:オトコ == 0 && MARK:屈服刻印 >= 2 && (FLAG:娼館拡張 & 1) != 0
	SIF CFLAG:特別コスタイプ == 79 && (CFLAG:着衣状態 & 64)
		GOTO INPUT_LOOP_1
	PRINTFORML 《%NAME:TARGET%にＶ営業で稼がせます》
	WAIT
	CFLAG:営業内容 = 4
ELSEIF RESULT == 5 && TALENT:オトコ == 0 && ABL:技巧 >=3 && MARK:屈服刻印 >= 3 && (FLAG:娼館拡張 & 1) != 0 && (FLAG:娼館拡張 & 2) != 0
	SIF CFLAG:特別コスタイプ == 79 && (CFLAG:着衣状態 & 64)
		GOTO INPUT_LOOP_1
	PRINTFORML 《%NAME:TARGET%にＳＭ営業で稼がせます》
	WAIT
	CFLAG:営業内容 = 5
ELSEIF RESULT == 6 && TALENT:オトコ == 0 && TALENT:[[TALENT:常連客]] == 1 && (FLAG:娼館拡張 & 4) != 0
	SIF CFLAG:特別コスタイプ == 79 && (CFLAG:着衣状態 & 64)
		GOTO INPUT_LOOP_1
	PRINTFORML 《%NAME:TARGET%に常連客への出張営業で稼がせます》
	WAIT
	CFLAG:営業内容 = 6
ELSEIF RESULT == 10
	CFLAG:労役妊娠回避 = !CFLAG:労役妊娠回避
	IF CFLAG:TARGET:労役妊娠回避
		PRINTFORML 《%NAME:TARGET%に自動的に営業内容を調節して労役妊娠回避させます》
	ELSE
		PRINTFORML 《自動調節させないことにしました》
	ENDIF
	WAIT
ELSEIF RESULT == 9 && CFLAG:営業内容 >= 3
	CFLAG:TARGET:営業コンドーム = 1 - CFLAG:TARGET:営業コンドーム
	IF CFLAG:TARGET:営業コンドーム
		PRINTFORML 《コンドームを使用させることにしました》
	ELSE
		PRINTFORML 《コンドームを使用させないことにしました》
	ENDIF
	WAIT
ENDIF
GOTO INPUT_LOOP_1

