	REALTIME:0 = TOINT(SUBSTRING(GETTIMES(), 0, 4))
	DAY:日付_年 = REALTIME:0
	DAY:日付_月 = 4
	DAY:日付_日 = 1
	FLAG:事務所規模 = 10
