@SYSTEM_AUTOSAVE
GETTIME
SELECTCASE FLAG:難易度
	CASE 1
		RESULTS:0 += " EASY/"
	CASE 2
		IF FLAG:EASYモードを経由したデータ
			RESULTS:0 += " NORMAL/"
		ELSE
			RESULTS:0 += " 実績チャレンジ/"
		ENDIF
	CASE 3
		RESULTS:0 += " HARD/"
	CASE 4
		RESULTS:0 += " POWERFUL/"
	CASE 9
		RESULTS:0 += " EXTRA/"
ENDSELECT

IF TIME == 0
	RESULTS:0 += @"{DAY+1}週目・前半"
ELSE
	RESULTS:0 += @"{DAY+1}週目・後半"
ENDIF

SIF FLAG:前回調教対象 >= 0
	TARGET = FLAG:前回調教対象
SIF FLAG:前回助手 >= 0
	ASSI = FLAG:前回助手

SIF TARGET >= 1
	RESULTS:0 += @" 前回:%NAME:TARGET%指導"

SAVEDATA 99,RESULTS:0
IF !LOCAL
	SAVEDATA 991,RESULTS:0
	LOCAL = 1
ELSE
	SAVEDATA 992,RESULTS:0
	LOCAL = 0
ENDIF