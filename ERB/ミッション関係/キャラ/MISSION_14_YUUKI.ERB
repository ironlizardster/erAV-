@MISSION_CALC_14
; 失敗なら0, 成功なら1, 大成功なら2をRETURNで戻す
LOCAL = GETCHARA([[キャラ:神那悠喜]])
LOCAL:1 = 0

SIF TALENT:LOCAL:永遠の愛 == 1
	LOCAL:1++
SIF TALENT:LOCAL:アイドル == 1
	LOCAL:1++
SIF MAXBASE:LOCAL:魅力値 >= 190
	LOCAL:1++

SIF LOCAL:1 >= 3
	RETURN 2
RETURN 0

