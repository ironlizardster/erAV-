;=================================================
; ミッション達成判定計算
;--------------------------------------------
; ミッションの成否判定を記述する
;=================================================
@MISSION_CALC_19
; 失敗なら0, 成功なら1, 大成功なら2をRETURNで戻す
LOCAL = GETCHARA([[キャラ:瑞穂坂奈留]])
LOCAL:1 = 0

SIF TALENT:LOCAL:恋心 == 1
	LOCAL:1++
SIF TALENT:LOCAL:彼氏あり == 1
	LOCAL:1++
SIF ABL:LOCAL:Ｃ感覚 == 10
	LOCAL:1++
SIF ABL:LOCAL:レズっ気 >= 5
	LOCAL:1++
SIF !IS童貞(LOCAL)
	LOCAL:1++

;恋心と彼氏ありは両立しないためこれでよい
IF LOCAL:1 >= 4
	RETURN 2
ENDIF
RETURN 0

