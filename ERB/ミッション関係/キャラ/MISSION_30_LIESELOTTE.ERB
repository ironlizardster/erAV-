IF ARG == 0
	SIF LOCAL != -1
		CALL キャラ削除, LOCAL
ELSE
	FLAG:処女厨ボーナス受け取り = 0
	PRINTFORM %CALLNAME:LOCAL%の容態も最近では車椅子無しでも日常生活を送れるほどに
	PRINTFORML 【性魔術】のおかげでだいぶ安定してきたようだ……
	PRINTFORMW 《%CALLNAME:LOCAL%は【%TALENTNAME:[[TALENT:車椅子]]%】を失った》
	PRINTFORMW 《%CALLNAME:LOCAL%は【%TALENTNAME:[[TALENT:性魔術]]%】を失った》
	PRINTFORMW 《%CALLNAME:LOCAL%の最大体力が1000増加した》
	PRINTFORMW 
	TALENT:LOCAL:車椅子 = 0
	TALENT:LOCAL:性魔術 = 0
	MAXBASE:LOCAL:体力 += 1000
	BASE:LOCAL:体力 = MAXBASE:LOCAL:体力
	BASE:LOCAL:魅力値 = MAXBASE:LOCAL:魅力値
	TALENT:LOCAL:ミッション = 0
ENDIF

