;=================================================
; ミッション達成判定計算
;--------------------------------------------
; ミッションの成否判定を記述する
;=================================================
@MISSION_CALC_30
; 失敗なら0, 成功なら1, 大成功なら2をRETURNで戻す
LOCAL = GETCHARA([[キャラ:リーゼロッテ・パラディスス]])
LOCAL:1 = 0
LOCAL:2 = GETCHARA([[キャラ:エルファリア・ラーグラーデ]])

SIF BASE:LOCAL:魔力 >= 200000
	LOCAL:1++
SIF TALENT:LOCAL:崩壊 == 0
	LOCAL:1++
SIF TALENT:LOCAL:ＡＶ女優 == 0
	LOCAL:1++
SIF CFLAG:LOCAL:娼館デビュー == 0
	LOCAL:1++
SIF TALENT:LOCAL:淫魔 == 0
	LOCAL:1++
SIF TALENT:LOCAL:天使 == 0
	LOCAL:1++
SIF RELATION:LOCAL:(NO:(LOCAL:2)) >= 200
	LOCAL:1++

IF LOCAL:1 >= 7
	RETURN 2
ENDIF
RETURN 0

