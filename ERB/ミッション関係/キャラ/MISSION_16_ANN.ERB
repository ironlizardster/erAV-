;=================================================
; ミッション達成判定計算
;--------------------------------------------
; ミッションの成否判定を記述する
;=================================================
@MISSION_CALC_16
; 失敗なら0, 成功なら1, 大成功なら2をRETURNで戻す
LOCAL = GETCHARA([[キャラ:二見アン]])
LOCAL:1 = 0

SIF ABL:LOCAL:信頼 > 6
	LOCAL:1++
SIF ABL:LOCAL:奉仕精神 > 6
	LOCAL:1++
SIF TALENT:LOCAL:奉仕しない == 0
	LOCAL:1++

IF LOCAL:1 >= 3
	RETURN 2
ENDIF
RETURN 0

