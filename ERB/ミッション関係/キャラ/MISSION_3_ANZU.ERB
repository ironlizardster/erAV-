; 失敗なら0, 成功なら1, 大成功なら2をRETURNで戻す
LOCAL = GETCHARA([[キャラ:小野原あんず]])
LOCAL:1 = 0
;アイドル
SIF TALENT:LOCAL:アイドル == 1
	LOCAL:1++
;美容
SIF ABL:LOCAL:美容感覚 >= 5
	LOCAL:1++
SIF LOCAL:1 == 2
	RETURN 2
RETURN 0

