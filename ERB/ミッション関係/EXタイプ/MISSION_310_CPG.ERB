;=================================================
; ミッション達成判定計算
;--------------------------------------------
; ミッションの成否判定を記述する
;=================================================
@MISSION_CALC_310
; 失敗なら0, 成功なら1, 大成功なら2をRETURNで戻す
LOCAL:1 = 0
LOCAL:2 = 0

LOCAL:30 = 0
LOCAL:31 = 0

SIF GETCHARA([[キャラ:宮間かなで]]) >= 0
	LOCAL:3 = GETCHARA([[キャラ:宮間かなで]])
SIF GETCHARA([[キャラ:佐々木美乃里]]) >= 0
	LOCAL:4 = GETCHARA([[キャラ:佐々木美乃里]])

SIF MARK:反発刻印 == 0
	LOCAL:1++
SIF TALENT:[[TALENT:ONLY ONE IDOL]] == 1
	LOCAL:1++
SIF TALENT:永遠の愛 == 1
	LOCAL:1++

SIF ABL:MASTER:技巧 == 10
	LOCAL:30++
REPEAT CHARANUM
	IF COUNT == 0
		CONTINUE
	ELSE
		SIF RELATION:COUNT:(NO:TARGET) >= 200
			LOCAL:2++
	ENDIF
REND
SIF LOCAL:2 >= 5
	LOCAL:30++

SIF TALENT:(LOCAL:3):[[TALENT:ONLY ONE EMPRESS]] == 1
	LOCAL:31++
SIF TALENT:(LOCAL:4):[[TALENT:Mermaid girl]] == 1
	LOCAL:31++
SIF ABL:(LOCAL:3):性交技術 == 10 && ABL:(LOCAL:3):技巧 == 10
	LOCAL:31++
SIF ABL:(LOCAL:4):性交技術 == 10 && ABL:(LOCAL:4):技巧 == 10
	LOCAL:31++

IF LOCAL:1 == 3
	IF LOCAL:30 == 1 
		RETURN 1
	ELSEIF LOCAL:31 == 4
		RETURN 2
	ENDIF
ELSE
	RETURN 0
ENDIF

