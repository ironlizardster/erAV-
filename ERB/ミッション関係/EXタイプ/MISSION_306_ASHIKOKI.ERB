;=================================================
; ミッション受領時処理
;--------------------------------------------
; キャラクターの追加など、
; ミッションの受領時に行う処理を記述する
;=================================================
@MISSION_RECEIVE_306
; キャラクターを選択
CALL MISSION_LIFELIST_DECIDE(-1)
; 即座に報告処理を呼び出す
CALL MISSION_EXEC_REPORT(306)

;=================================================
; ミッション達成判定計算
;--------------------------------------------
; ミッションの成否判定を記述する
;=================================================
@MISSION_CALC_306
; 失敗なら0, 成功なら1, 大成功なら2をRETURNで戻す
LOCAL:1 = 0
SIF MAXBASE:魅力値 >= 140
	LOCAL:1++
SIF TALENT:サド == 1
	LOCAL:1++
SIF TALENT:小悪魔 == 1
	LOCAL:1++
SIF TALENT:童顔 == 1
	LOCAL:1++
SIF ABL:サドっ気 >= 8
	LOCAL:1++
SIF ABL:話術 >= 5
	LOCAL:1++
SIF ABL:奉仕技術 >= 7
	LOCAL:1++

SIF LOCAL:1 >= 7
	RETURN 2
RETURN 0

;=================================================
; ミッション報告後処理
;--------------------------------------------
; 経験や素質の変化など、
; ミッション報告後に行う処理を記述する
;--------------------------------------------
; 引数
;  ARG 成否判定の結果(0:失敗, 1:成功, 2:大成功)
;=================================================
@MISSION_REPORT_306(ARG)

TCVAR:精液経験 += 5 + RAND:6
CALL MISSION_ADD_EXP(TARGET)

IF ARG == 1
	MAXBASE:魅力値 += 20
	BASE:魅力値 += 20
	IF TALENT:カリスマ == 0
		TALENT:カリスマ = 1
	ELSEIF TALENT:カリスマ == 1
		MAXBASE:魅力値 += 10
		BASE:魅力値 += 10
	ENDIF
ENDIF
