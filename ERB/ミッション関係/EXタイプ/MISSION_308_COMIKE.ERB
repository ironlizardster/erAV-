	LOCAL:1++
SIF TALENT:アイドル || TALENT:ファッションモデル == 1
	LOCAL:1++

SIF LOCAL:1 >= 9
	RETURN 2
SIF LOCAL:1 >= 7
	RETURN 1
RETURN 0

