SIF ABL:歌唱技能 < 5
	LOCAL:1 -= 100
SIF ABL:オタク知識 >= 8
	LOCAL:1++
SIF ABL:オタク知識 < 8
	LOCAL:1 -= 100
SIF IS処女(TARGET)
	LOCAL:1++
SIF !IS処女(TARGET)
	LOCAL:1 -= 100

SIF TALENT:コスプレイヤー == 1
	LOCAL:1 -= 100
SIF TALENT:ColorfulPureGirls == 1
	LOCAL:1 -= 100
SIF TALENT:オリジナルユニット == 1
	LOCAL:1 -= 100
SIF TALENT:[[TALENT:Mermaid girl]] == 1
	LOCAL:1 -= 100
SIF TALENT:Triptych == 1
	LOCAL:1 -= 100

