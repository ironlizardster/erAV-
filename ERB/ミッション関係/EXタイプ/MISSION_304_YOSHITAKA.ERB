;=================================================
; ミッション達成判定計算
;--------------------------------------------
; ミッションの成否判定を記述する
;=================================================
@MISSION_CALC_304
; 失敗なら0, 成功なら1, 大成功なら2をRETURNで戻す
LOCAL:1 = 0
SIF MAXBASE:魅力値 >= 150
	LOCAL:1++
SIF MAXBASE:魅力値 < 150
	LOCAL:1 -= 100
SIF ABL:露出癖 >= 2
	LOCAL:1++
SIF ABL:露出癖 < 2
	LOCAL:1 -= 100
SIF ABL:運動能力 >= 3
	LOCAL:1++
SIF ABL:運動能力 < 3
	LOCAL:1 -= 100
SIF ABL:被写技能 >= 3
	LOCAL:1++
SIF ABL:被写技能 < 3
	LOCAL:1 -= 100
SIF ABL:オタク知識 >= 9
	LOCAL:1++
SIF ABL:オタク知識 < 9
	LOCAL:1 -= 100
SIF TALENT:コスプレイヤー == 1
	LOCAL:1++
SIF IS_デカパイ(TARGET) == 1
	LOCAL:1++
SIF LOCAL:1 >= 6
	RETURN 2
SIF LOCAL:1 >= 5
	RETURN 1
RETURN 0

