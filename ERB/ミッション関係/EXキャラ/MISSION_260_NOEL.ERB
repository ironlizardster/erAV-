;=================================================
; ミッション達成判定計算
;--------------------------------------------
; ミッションの成否判定を記述する
;=================================================
@MISSION_CALC_260
; 失敗なら0, 成功なら1, 大成功なら2をRETURNで戻す
LOCAL:1 = 0
SIF NO:TARGET == [[キャラ:碧野乃衣瑠]]
	LOCAL:1++
SIF ABL:露出癖 >= 5
	LOCAL:1++
SIF ABL:被写技能 >= 5
	LOCAL:1++
SIF ABL:舞踊技能 >= 5
	LOCAL:1++
SIF MAXBASE:魅力値 >= 140
	LOCAL:1++
SIF RELATION:(NO:ASSI) >= 200
	LOCAL:1++
SIF TALENT:大ドジ == 0
	LOCAL:1++

SIF NO:ASSI == [[キャラ:清水桜子]]
	LOCAL:1++
SIF ABL:ASSI:露出癖 >= 5
	LOCAL:1++
SIF ABL:ASSI:被写技能 >= 5
	LOCAL:1++
SIF ABL:ASSI:料理技能 >= 6
	LOCAL:1++
SIF MAXBASE:ASSI:魅力値 >= 150
	LOCAL:1++
SIF RELATION:ASSI:(NO:TARGET) >= 200
	LOCAL:1++

SIF LOCAL:1 == 13
	RETURN 2
RETURN 0

