CALL MISSION_LIFELIST_PARTNER([[キャラ:多々良ゆな]])
; 即座に報告処理を呼び出す
CALL MISSION_EXEC_REPORT(57)

;=================================================
; ミッション達成判定計算
;--------------------------------------------
; ミッションの成否判定を記述する
;=================================================
@MISSION_CALC_57
; 失敗なら0, 成功なら1, 大成功なら2をRETURNで戻す
LOCAL:1 = 0
LOCAL:11 = 0

SIF NO:TARGET == [[キャラ:多々良ひな]]
	LOCAL:1++
SIF ABL:レズっ気 >= 5
	LOCAL:1++
SIF ABL:露出癖 >= 3
	LOCAL:1++
SIF ABL:被写技能 >= 3
	LOCAL:1++
SIF ABL:レズっ気 >= 8
	LOCAL:11++
SIF ABL:レズ中毒 >= 8
	LOCAL:11++
SIF NO:ASSI == [[キャラ:多々良ゆな]]
	LOCAL:1++
SIF ABL:ASSI:レズっ気 >= 5
	LOCAL:1++
SIF ABL:ASSI:露出癖 >= 3
	LOCAL:1++
SIF ABL:ASSI:被写技能 >= 3
	LOCAL:1++
SIF ABL:ASSI:レズっ気 >= 8
	LOCAL:11++
SIF ABL:ASSI:レズ中毒 >= 8
	LOCAL:11++


IF LOCAL:1 == 8
	IF LOCAL:11 == 4
		RETURN 2
	ELSE
		RETURN 1
	ENDIF
ELSE
	RETURN 0
ENDIF

