;=================================================
; ミッション達成判定計算
;--------------------------------------------
; ミッションの成否判定を記述する
;=================================================
@MISSION_CALC_132
; 失敗なら0, 成功なら1, 大成功なら2をRETURNで戻す
LOCAL:1 = 0
LOCAL:11 = 0

SIF NO:TARGET == [[キャラ:リリス]]
	LOCAL:1++
SIF TALENT:高級娼婦 == 1
	LOCAL:1++
SIF EXP:Ｖ経験 >= 1000
	LOCAL:1++
SIF EXP:性交経験 >= 500
	LOCAL:1++

SIF EXP:異常経験 >= 500
	LOCAL:11++

IF LOCAL:1 >= 4
	IF LOCAL:11 >= 1
		RETURN 2
	ELSE
		RETURN 1
	ENDIF
ELSE
	RETURN 0
ENDIF

