;=================================================
; ミッション達成判定計算
;--------------------------------------------
; ミッションの成否判定を記述する
;=================================================
@MISSION_CALC_52
; 失敗なら0, 成功なら1, 大成功なら2をRETURNで戻す
LOCAL:1 = 0
LOCAL:11 = 0

SIF NO:TARGET == [[キャラ:佐々木美乃里]]
	LOCAL:1++
SIF ABL:信頼 == 10
	LOCAL:1++
SIF ABL:露出癖 >= 3
	LOCAL:1++
SIF ABL:美容感覚 >= 5
	LOCAL:1++
SIF ABL:運動能力 == 10
	LOCAL:1++
SIF TALENT:淫乱 == 0
	LOCAL:1++
SIF TALENT:アイドル == 0
	LOCAL:1++
SIF TALENT:ＡＶ女優 == 0
	LOCAL:1++
SIF TALENT:ファッションモデル == 0
	LOCAL:1++
SIF TALENT:キャバ嬢 == 0
	LOCAL:1++
SIF TALENT:オリジナルユニット == 0
	LOCAL:1++

SIF TALENT:処女 == 1
	LOCAL:11++
SIF !CFLAG:処女喪失相手
	LOCAL:11++
SIF MAXBASE:体力 >= 3700
	LOCAL:11++

IF LOCAL:1 == 11
	IF LOCAL:11 == 3
		RETURN 2
	ELSE
		RETURN 1
	ENDIF
ELSE
	RETURN 0
ENDIF

