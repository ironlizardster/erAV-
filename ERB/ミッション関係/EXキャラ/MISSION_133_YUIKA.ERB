;=================================================
; ミッション達成判定計算
;--------------------------------------------
; ミッションの成否判定を記述する
;=================================================
@MISSION_CALC_133
; 失敗なら0, 成功なら1, 大成功なら2をRETURNで戻す
LOCAL:1 = 0
SIF NO:TARGET == [[キャラ:佐倉結衣花]]
	LOCAL:1++
SIF ABL:話術 == 10
	LOCAL:1++
SIF ABL:被写技能 >= 3
	LOCAL:1++
SIF RELATION:TARGET:(NO:(GETCHARA([[キャラ:二葉志乃]]))) >= 300
	LOCAL:1++

SIF LOCAL:1 == 4
	RETURN 2
RETURN 0

