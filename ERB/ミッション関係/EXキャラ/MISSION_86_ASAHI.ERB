;=================================================
; ミッション受領時処理
;--------------------------------------------
; キャラクターの追加など、
; ミッションの受領時に行う処理を記述する
;=================================================
@MISSION_RECEIVE_86
; キャラクターを選択
CALL MISSION_LIFELIST_DECIDE([[キャラ:川岸あさひ]])
; 即座に報告処理を呼び出す
CALL MISSION_EXEC_REPORT(86)

;=================================================
; ミッション達成判定計算
;--------------------------------------------
; ミッションの成否判定を記述する
;=================================================
@MISSION_CALC_86
; 失敗なら0, 成功なら1, 大成功なら2をRETURNで戻す
LOCAL:1 = 0
SIF NO:TARGET == [[キャラ:川岸あさひ]]
	LOCAL:1++
SIF ABL:被写技能 >= 3
	LOCAL:1++
SIF ABL:露出癖 >= 5
	LOCAL:1++
SIF ABL:欲望 >= 7
	LOCAL:1++
SIF TALENT:淫乱 == 1
	LOCAL:1++
SIF TALENT:彼氏あり == 1
	LOCAL:1++
SIF !IS_快感の否定(TARGET)
	LOCAL:1++
SIF TALENT:ギャル系 == 0
	LOCAL:1++
SIF CFLAG:処女喪失相手 >= 1
	LOCAL:1++
SIF LOCAL:1 == 9
	RETURN 2
RETURN 0

;=================================================
; ミッション報告後処理
;--------------------------------------------
; 経験や素質の変化など、
; ミッション報告後に行う処理を記述する
;--------------------------------------------
; 引数
;  ARG 成否判定の結果(0:失敗, 1:成功, 2:大成功)
;=================================================
@MISSION_REPORT_86(ARG)
IF IS処女(TARGET)
	CALL 処女喪失実行(TARGET,初相手_不良,BASE:実年齢,DAY:日付_月,DAY:日付_日,初場所_娼館,初状況_輪姦,"知らないオトコの人")
ENDIF
IF !CFLAG:初キス相手
	CALL 初キス喪失実行(TARGET,初相手_接待客,BASE:実年齢,DAY:日付_月,DAY:日付_日,初場所_娼館,初状況_男性器,"知らないオトコの人")
ENDIF
IF ISＡ処女(TARGET)
	CALL Ａ処女喪失実行(TARGET,初相手_不良,BASE:実年齢,DAY:日付_月,DAY:日付_日,初場所_娼館,初状況_輪姦,"知らないオトコの人")
ENDIF
TCVAR:絶頂経験 += 20 + RAND:11
TCVAR:Ｖ経験 += 27 + RAND:11
TCVAR:Ａ経験 += 13 + RAND:16
TCVAR:性交経験 += TCVAR:Ｖ経験 + TCVAR:Ａ経験
TCVAR:精液経験 += 50 + RAND:21
TCVAR:フェラ経験 += 20 + RAND:16
TCVAR:異常経験 += 1 + RAND:4
