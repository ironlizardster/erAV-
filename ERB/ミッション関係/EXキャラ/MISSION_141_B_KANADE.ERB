;=================================================
; ミッション達成判定計算
;--------------------------------------------
; ミッションの成否判定を記述する
;=================================================
@MISSION_CALC_141
; 失敗なら0, 成功なら1, 大成功なら2をRETURNで戻す
LOCAL:1 = 0
SIF NO:TARGET == [[キャラ:宮間カナ]]
	LOCAL:1++
SIF ABL:信頼 == 10
	LOCAL:1++
SIF ABL:奉仕精神 == 10
	LOCAL:1++
SIF TALENT:永遠の愛 == 1
	LOCAL:1++
SIF IS処女(TARGET)
	LOCAL:1++
SIF ISＡ処女(TARGET)
	LOCAL:1++
SIF TALENT:ナマイキ == 1
	LOCAL:1++
SIF TALENT:大人しい == 0
	LOCAL:1++
SIF TALENT:活発 == 0
	LOCAL:1++
SIF TALENT:恥じらい == 0
	LOCAL:1++
SIF TALENT:恥薄い == 1
	LOCAL:1++
SIF TALENT:貞操無頓着 == 1
	LOCAL:1++
SIF TALENT:貞操観念 == 0
	LOCAL:1++
SIF LOCAL:1 == 13
	RETURN 2
RETURN 0

;=================================================
; ミッション報告後処理
;--------------------------------------------
; 経験や素質の変化など、
; ミッション報告後に行う処理を記述する
;--------------------------------------------
; 引数
;  ARG 成否判定の結果(0:失敗, 1:成功, 2:大成功)
;=================================================
@MISSION_REPORT_141(ARG)
IF ARG == 1
	LOCAL:1 = GETCHARA([[キャラ:宮間かなで]])
	LOCAL:2 = GETCHARA([[キャラ:宮間カナ]])
	IF LOCAL:1 > 0
		MAXBASE:(LOCAL:1):魅力値 += 20
		BASE:(LOCAL:1):魅力値 += 20
	ENDIF
	IF LOCAL:2 > 0
		MAXBASE:(LOCAL:2):魅力値 += 20
		BASE:(LOCAL:2):魅力値 += 20
		TALENT:(LOCAL:2):ナマイキ = 0
		TALENT:(LOCAL:2):素直 = 1
		TALENT:(LOCAL:2):献身的 = 1
		TALENT:(LOCAL:2):人気者 = 1
	ENDIF
ENDIF
