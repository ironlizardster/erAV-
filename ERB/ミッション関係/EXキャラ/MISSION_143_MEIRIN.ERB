;=================================================
; ミッション達成判定計算
;--------------------------------------------
; ミッションの成否判定を記述する
;=================================================
@MISSION_CALC_143
; 失敗なら0, 成功なら1, 大成功なら2をRETURNで戻す
LOCAL:1 = 0
SIF NO:TARGET == [[キャラ:李美鈴]]
	LOCAL:1++
SIF EXP:愛情経験 >= 750
	LOCAL:1++
SIF EXP:交際人数 == 0
	LOCAL:1++
SIF MAXBASE:体力 >= 3500
	LOCAL:1++
SIF MAXBASE:気力 >= 2500
	LOCAL:1++
SIF ABL:信頼 == 10
	LOCAL:1++
SIF ABL:奉仕精神 == 10
	LOCAL:1++
SIF TALENT:永遠の愛 == 1
	LOCAL:1++
SIF TALENT:風俗嬢 == 0
	LOCAL:1++
SIF TALENT:高級娼婦 == 0
	LOCAL:1++
SIF TALENT:彼氏あり == 0
	LOCAL:1++
SIF TALENT:セフレあり == 0
	LOCAL:1++
SIF TALENT:ギャル系 == 0
	LOCAL:1++
SIF TALENT:絶倫 == 0
	LOCAL:1++
SIF TALENT:淫魔 == 0
	LOCAL:1++
SIF TALENT:天使 == 0
	LOCAL:1++
SIF RELATION:(NO:ASSI) >= 200
	LOCAL:1++


SIF LOCAL:1 == 17
	RETURN 2
RETURN 0

;=================================================
; ミッション報告後処理
;--------------------------------------------
; 経験や素質の変化など、
; ミッション報告後に行う処理を記述する
;--------------------------------------------
; 引数
;  ARG 成否判定の結果(0:失敗, 1:成功, 2:大成功)
;=================================================
@MISSION_REPORT_143(ARG)

CALL SUCCUBUS_STATUS_ACH(TARGET)
CFLAG:髪色 = 2

IF ARG == 0
	ABL:欲望 = 10
	TALENT:狂気 = 1
	TALENT:彼氏あり = 1
	TALENT:ギャル系 = 1
	TALENT:褐色肌 = 1
	TALENT:セフレあり = 1
	CFLAG:彼氏の有無 = 1
	CFLAG:服装変更の判定用 += RAND:6
	CALL DECIDE_BOYFRIEND2
	CALL DECIDE_SEXFRIEND2
ELSEIF ARG == 1
	MAXBASE:気力 += 1000
	BASE:気力 += 1000
	MAXBASE:魅力値 += 20	
	BASE:魅力値 += 20
	ABL:信頼 = 5
	ABL:技巧 = 10
	ABL:話術 = 10
	ABL:奉仕精神 = 5
ENDIF
