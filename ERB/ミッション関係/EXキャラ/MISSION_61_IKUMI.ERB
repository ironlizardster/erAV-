;=================================================
; ミッション受領時処理
;--------------------------------------------
; キャラクターの追加など、
; ミッションの受領時に行う処理を記述する
;=================================================
@MISSION_RECEIVE_61
; キャラクターを選択
CALL MISSION_LIFELIST_DECIDE([[キャラ:須野郁美]])
; 即座に報告処理を呼び出す
CALL MISSION_EXEC_REPORT(61)

;=================================================
; ミッション達成判定計算
;--------------------------------------------
; ミッションの成否判定を記述する
;=================================================
@MISSION_CALC_61
; 失敗なら0, 成功なら1, 大成功なら2をRETURNで戻す
LOCAL:1 = 0
SIF NO:TARGET == [[キャラ:須野郁美]]
	LOCAL:1++
SIF ABL:技巧 >= 10
	LOCAL:1++
SIF ABL:話術 >= 5
	LOCAL:1++
SIF ABL:運動能力 >= 5
	LOCAL:1++
SIF MAXBASE:体力 >= 3000
	LOCAL:1++
SIF MAXBASE:気力 >= 2000
	LOCAL:1++
SIF CFLAG:護衛 == 1
	LOCAL:1++

SIF LOCAL:1 == 7
	RETURN 2
RETURN 0

;=================================================
; ミッション報告後処理
;--------------------------------------------
; 経験や素質の変化など、
; ミッション報告後に行う処理を記述する
;--------------------------------------------
; 引数
;  ARG 成否判定の結果(0:失敗, 1:成功, 2:大成功)
;=================================================
@MISSION_REPORT_61(ARG)
IF ARG > 0
	MAXBASE:気力 += 1500
	ABL:話術 = 10
	TALENT:カリスマ = 1
	TALENT:交渉上手 = 1
	TALENT:MASTER:勲章 = 1
	TCVAR:異常経験 += RAND:6
	CALL MISSION_ADD_EXP(TARGET)
ELSE
	CFLAG:護衛 = 0
ENDIF
