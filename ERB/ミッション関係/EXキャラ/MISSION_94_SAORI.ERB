;=================================================
@MISSION_VISIBLE_94
; 不可視なら0、可視なら1を戻す
LOCAL = 0
LOCAL:1 = 0
LOCAL:2 = 0


IF GETCHARA([[キャラ:高城沙織]], 0) != -1
	LOCAL = GETCHARA([[キャラ:高城沙織]])
	SIF TALENT:LOCAL:ファッションモデル == 1
		LOCAL:2++
ENDIF
IF GETCHARA([[キャラ:桐生歌音]], 0) != -1
	LOCAL:1 = GETCHARA([[キャラ:桐生歌音]])
	SIF TALENT:(LOCAL:1):[[TALENT:Emerald Queen]]
		LOCAL:2++
ENDIF

IF LOCAL:2 == 2
	RETURN 1
ELSE
	RETURN 0
ENDIF

