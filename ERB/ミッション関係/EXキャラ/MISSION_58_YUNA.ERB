;=================================================
; ミッション受領時処理
;--------------------------------------------
; キャラクターの追加など、
; ミッションの受領時に行う処理を記述する
;=================================================
@MISSION_RECEIVE_58
; キャラクターを選択
CALL MISSION_LIFELIST_DECIDE([[キャラ:多々良ひな]])
CALL MISSION_LIFELIST_PARTNER([[キャラ:多々良ゆな]])
; 即座に報告処理を呼び出す
CALL MISSION_EXEC_REPORT(58)

;=================================================
; ミッション達成判定計算
;--------------------------------------------
; ミッションの成否判定を記述する
;=================================================
@MISSION_CALC_58
; 失敗なら0, 成功なら1, 大成功なら2をRETURNで戻す
LOCAL:1 = 0
LOCAL:11 = 0

SIF NO:TARGET == [[キャラ:多々良ひな]]
	LOCAL:1++
IF TALENT:処女 == 1 && TALENT:アナル処女 == 1 && EXP:レズ経験 >= 3000
	LOCAL:1++
ELSEIF EXP:レズ経験 >= 5000
	LOCAL:1++
ENDIF
SIF ABL:美容感覚 >= 5
	LOCAL:1++ 
SIF TALENT:アイドル == 0
	LOCAL:1++
SIF TALENT:ファッションモデル == 0
	LOCAL:1++
SIF TALENT:キャバ嬢 == 0
	LOCAL:1++

SIF NO:ASSI == [[キャラ:多々良ゆな]]
	LOCAL:1++
IF TALENT:ASSI:処女 == 1 && TALENT:ASSI:アナル処女 == 1 && EXP:ASSI:レズ経験 >= 3000
	LOCAL:1++
ELSEIF EXP:ASSI:レズ経験 >= 5000
	LOCAL:1++
ENDIF
SIF ABL:ASSI:美容感覚 >= 5
	LOCAL:1++ 
SIF TALENT:ASSI:アイドル == 0
	LOCAL:1++
SIF TALENT:ASSI:ファッションモデル == 0
	LOCAL:1++
SIF TALENT:ASSI:キャバ嬢 == 0
	LOCAL:1++
;ここまでが通常成功分、合計12

SIF ミッション結果:57 == 4
	LOCAL:11++
SIF TALENT:サド == 1
	LOCAL:11++
SIF ABL:サドっ気 >= 8
	LOCAL:11++
SIF ABL:レズ中毒 == 10
	LOCAL:11++
SIF CFLAG:上着タイプ == 244
	LOCAL:11++

SIF TALENT:ASSI:マゾ == 1
	LOCAL:11++
SIF ABL:ASSI:マゾっ気 >= 8
	LOCAL:11++
SIF ABL:ASSI:レズ中毒 == 10
	LOCAL:11++
SIF CFLAG:ASSI:上着タイプ == 244
	LOCAL:11++


IF LOCAL:1 == 12
	IF LOCAL:11 == 9
		RETURN 2
	ELSE
		RETURN 1
	ENDIF
ELSE
	RETURN 0
ENDIF

;=================================================
; ミッション報告後処理
;--------------------------------------------
; 経験や素質の変化など、
; ミッション報告後に行う処理を記述する
;--------------------------------------------
; 引数
;  ARG 成否判定の結果(0:失敗, 1:成功, 2:大成功)
;=================================================
@MISSION_REPORT_58(ARG)
TCVAR:レズ経験 += 150 + RAND:51
TCVAR:絶頂経験 += 75 + RAND:26

SIF TALENT:処女 == 0
	TCVAR:Ｖ経験 += (TCVAR:絶頂経験 / 3)
SIF TALENT:アナル処女 == 0
	TCVAR:Ａ経験 += (TCVAR:絶頂経験 / 3)
SIF (TCVAR:Ｖ経験 + TCVAR:絶頂経験) >= 1
	TCVAR:性交経験 += (TCVAR:Ａ経験 + TCVAR:絶頂経験) / 2

TCVAR:ASSI:レズ経験 += TCVAR:レズ経験
TCVAR:ASSI:絶頂経験 += TCVAR:絶頂経験

SIF TALENT:ASSI:処女 == 0
	TCVAR:ASSI:Ｖ経験 += (TCVAR:絶頂経験 / 3)
SIF TALENT:ASSI:アナル処女 == 0
	TCVAR:ASSI:Ａ経験 += (TCVAR:絶頂経験 / 3)
SIF (TCVAR:ASSI:Ｖ経験 + TCVAR:ASSI:絶頂経験) >= 1
	TCVAR:ASSI:性交経験 += (TCVAR:Ａ経験 + TCVAR:絶頂経験) / 2


; 経験増加処理の呼び出し
CALL MISSION_ADD_EXP(TARGET)
CALL MISSION_ADD_EXP(ASSI)

WAIT

IF ARG >= 1
	IF ARG == 2
		TALENT:カリスマ = 1
		TALENT:魅力 = 1
		TALENT:ASSI:カリスマ = 1
		TALENT:ASSI:魅力 = 1
		MAXBASE:魅力値 += 30
		MAXBASE:ASSI:魅力値 += 30
		BASE:魅力値 += 30
		BASE:ASSI:魅力値 += 30
	ENDIF
	TALENT:アイドル = 1
	TALENT:ASSI:アイドル = 1
	TALENT:[[TALENT:Lily Princess]] = 1
	TALENT:ASSI:[[TALENT:Lily Princess]] = 1
	MAXBASE:魅力値 += 70
	MAXBASE:ASSI:魅力値 += 70
	BASE:魅力値 += 70
	BASE:ASSI:魅力値 += 70
ELSEIF ARG == 0
	RELATION:TARGET:(NO:ASSI) = 30
	RELATION:ASSI:(NO:TARGET) = 30
	MARK:反発刻印 = 3
	MARK:ASSI:反発刻印 = 3
ENDIF
