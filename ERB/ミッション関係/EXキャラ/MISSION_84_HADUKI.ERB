CALL MISSION_EXEC_REPORT(84)

;=================================================
; ミッション達成判定計算
;--------------------------------------------
; ミッションの成否判定を記述する
;=================================================
@MISSION_CALC_84
; 失敗なら0, 成功なら1, 大成功なら2をRETURNで戻す
LOCAL:1 = 0
SIF NO:TARGET == [[キャラ:中島葉月]]
	LOCAL:1++
SIF ABL:露出癖 >= 5
	LOCAL:1++
SIF ABL:欲望 >= 7
	LOCAL:1++
SIF ABL:マゾっ気 >= 5
	LOCAL:1++
SIF TALENT:淫乱 == 1
	LOCAL:1++
SIF TALENT:彼氏あり == 1
	LOCAL:1++
SIF TALENT:セックス狂 == 1
	LOCAL:1++
SIF TALENT:一線越えない == 0
	LOCAL:1++
SIF TALENT:ギャル系 == 0
	LOCAL:1++
SIF TALENT:薬毒耐性 == 0
	LOCAL:1++
SIF CFLAG:処女喪失相手 != 0
	LOCAL:1++
SIF LOCAL:1 == 11
	RETURN 2
RETURN 0

