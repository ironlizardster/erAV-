; 即座に報告処理を呼び出す
CALL MISSION_EXEC_REPORT(68)

;=================================================
; ミッション達成判定計算
;--------------------------------------------
; ミッションの成否判定を記述する
;=================================================
@MISSION_CALC_68
; 失敗なら0, 成功なら1, 大成功なら2をRETURNで戻す
LOCAL:1 = 0
SIF NO:TARGET == [[キャラ:恋歌・ロックウェル]]
	LOCAL:1++
SIF MAXBASE:体力 >= 3200
	LOCAL:1++
SIF MAXBASE:気力 >= 2000
	LOCAL:1++
SIF MAXBASE:魅力値 >= 120
	LOCAL:1++
SIF ABL:欲望 >= 7
	LOCAL:1++
SIF ABL:奉仕技術 >= 5
	LOCAL:1++
SIF ABL:性交技術 >= 5
	LOCAL:1++
SIF ABL:露出癖 >= 5
	LOCAL:1++
SIF ABL:舞踊技能 >= 3
	LOCAL:1++
SIF TALENT:淫乱 == 1
	LOCAL:1++
SIF TALENT:淫魔 == 0
	LOCAL:1++


SIF LOCAL:1 == 11
	RETURN 2
RETURN 0

