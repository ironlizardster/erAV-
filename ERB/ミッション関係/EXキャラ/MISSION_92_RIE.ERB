	LOCAL:1++
SIF MAXBASE:体力 >= 2500
	LOCAL:1++
SIF MAXBASE:気力 >= 3000
	LOCAL:1++
SIF ABL:美容感覚 >= 8
	LOCAL:1++
SIF ABL:被写技能 >= 5
	LOCAL:1++
SIF ABL:歌唱技能 >= 5
	LOCAL:1++
SIF ABL:舞踊技能 >= 5
	LOCAL:1++
SIF ABL:露出癖 >= 5
	LOCAL:1++
SIF TALENT:オリジナルユニット == 0
	LOCAL:1++
SIF TALENT:処女 == 1
	LOCAL:1++
SIF TALENT:Ａ処女 == 1
	LOCAL:1++
SIF !CFLAG:初キス相手
	LOCAL:1++

SIF TALENT:永遠の愛 == 1
	LOCAL:11++
SIF ABL:信頼 == 10
	LOCAL:11++
SIF EXP:愛情経験 >= 5000
	LOCAL:11++

IF LOCAL:1 >= 12
	IF LOCAL:11 >= 3
		RETURN 2
	ELSE
		RETURN 1
	ENDIF
ELSE
	RETURN 0
ENDIF

