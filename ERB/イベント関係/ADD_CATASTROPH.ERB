@ADD_CATASTROPH(ARG)

FOR LOCAL, 0, VARSIZE("TALENT")
	SIF LOCAL == [[TALENT:性経験]] ||  LOCAL == [[TALENT:性別]] || LOCAL == [[TALENT:母乳体質]] || LOCAL == [[TALENT:妊娠]] || LOCAL == [[TALENT:育児中]] || LOCAL == [[TALENT:褐色肌]] || LOCAL == [[TALENT:喫煙者]]
		CONTINUE
	TALENT:ARG:LOCAL = 0
NEXT
	TALENT:ARG:崩壊 = 1
	TALENT:ARG:Ｃ感度 = -1
	TALENT:ARG:Ｖ感度 = -1
	TALENT:ARG:Ａ感度 = -1
	TALENT:ARG:Ｂ感度 = -1
	MAXBASE:ARG:魅力値 = 10
	SIF BASE:ARG:魅力値 >= MAXBASE:ARG:魅力値
		BASE:ARG:魅力値 = MAXBASE:ARG:魅力値
	MAXBASE:ARG:体力 -= 1500
	SIF MAXBASE:ARG:体力 < 800
		MAXBASE:ARG:体力 = 800 
	BASE:ARG:体力 = MAXBASE:ARG:体力
	MAXBASE:ARG:気力 -= 1000
	SIF MAXBASE:ARG:気力 < 400
		MAXBASE:ARG:気力 = 400
	BASE:ARG:気力 = MAXBASE:ARG:気力
