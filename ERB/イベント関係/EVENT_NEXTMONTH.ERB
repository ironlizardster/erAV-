@EVENT_NEXTMONTH
#DIM STAFF_PAY = 0

G = 0
E = 0
M = 0

REPEAT CHARANUM
	STAFF_PAY += TALENT:COUNT:ＡＶ女優 * BASE:COUNT:ギャラ
REND	

PRINTFORM 女優やスタッフの給料
IF CMATCH(TALENT:アンドロイド,1)
	PRINTFORM や電気代
ENDIF
PRINTFORMW として{STAFF_PAY}ポイント支払いました
MONEY -= STAFF_PAY
CALL ENDING_CHECK

IF FLAG:習い事人数 > 0
	MONEY -= FLAG:習い事人数 * 10000
ENDIF
FLAG:治安悪化 += RAND:11
FLAG:治安悪化 -= RAND:6

SIF DAY:日付_月 == 3  || DAY:日付_月 == 6 || DAY:日付_月 == 10 || DAY:日付_月 == 12
	FLAG:治安悪化 -= (10 + RAND:11)

SIF FLAG:治安悪化 <= 0
	FLAG:治安悪化 = 0

IF FLAG:治安悪化 <= 24
	FLAG:治安悪化レベル = 0
ELSEIF FLAG:治安悪化 <= 49
	FLAG:治安悪化レベル = 1
ELSEIF FLAG:治安悪化 <= 75
	FLAG:治安悪化レベル = 2
ELSE
	FLAG:治安悪化レベル = 3
ENDIF	

CALL ビデオ売れ筋
CALL CALC_B_NEXTMONTH