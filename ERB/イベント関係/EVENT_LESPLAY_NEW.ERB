@EVENT_LESPLAY_NEW
#DIM LCOUNT
#DIM f_actor
#DIM s_actor
#DIM NumofTimes

CALL CLEARRANDCHOOSE

;FORで人数分回す
FOR LCOUNT,0,CHARANUM
	;MASTER、レズっ気2以下、歌音、の場合は除く
	IF !(LCOUNT == 0 || ABL:LCOUNT:レズっ気 <= 2 || NO:LCOUNT == [[キャラ:桐生歌音]])
		CALL ADDRANDCHOOSE(LCOUNT)
	ENDIF
NEXT

IF CHOICECOUNT_F() > 0
	CALL RANDCHOOSE
	f_actor = RESULT
ELSE
	RETURN
ENDIF

CALL CLEARRANDCHOOSE

;またFORで人数分回す
FOR LCOUNT,0,CHARANUM
	;同一人物じゃない、s_actorのレズっ気2以上、歌音でない、相性が良い（%とりあえず120以上%）%）時にランダムで（%とりあえず1割くらいで%）
	;こっちにはオトコはダメって書いてあるんだけどなぜこっちだけ。
	IF LCOUNT != f_actor && ABL:LCOUNT:レズっ気 >= 2  && (RELATION:f_actor:(NO:LCOUNT) >= 120) && RAND:100 < 10 && TALENT:LCOUNT:オトコ == 0 && NO:LCOUNT != [[キャラ:桐生歌音]]
		CALL ADDRANDCHOOSE(LCOUNT)
	ENDIF
NEXT

IF CHOICECOUNT_F() > 0
	CALL RANDCHOOSE
	s_actor = RESULT
ELSE
	RETURN
ENDIF


