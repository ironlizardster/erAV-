	SIF CFLAG:CHARA_NO:童貞喪失誕生日記念
		STRING += @"誕生日記念に"

[IF_DEBUG]
DEBUGPRINTFORML %STRING%
[ENDIF]

	STRLENS CSTR:CHARA_NO:童貞喪失相手
	IF RESULT
		TEMP_STR '= @"%CSTR:CHARA_NO:童貞喪失相手%"
		SELECTCASE CFLAG:CHARA_NO:童貞喪失相手
			CASE 初相手_夫
				TEMP_STR += @"（夫）"
			CASE 初相手_元彼
				TEMP_STR += @"（元カレ）"
			CASE 初相手_今彼
				TEMP_STR += @"（カレシ）"
			CASE 初相手_セフレ
				TEMP_STR += @"（セフレ）"
