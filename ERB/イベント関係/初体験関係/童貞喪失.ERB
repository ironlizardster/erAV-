DEBUGPRINTFORML %STRING%
[ENDIF]

ELSE
	IF !CFLAG:CHARA_NO:童貞喪失年齢
		STRING += "何年か前の"
	ELSE
		STRING += @"{CFLAG:CHARA_NO:童貞喪失年齢}歳の"
