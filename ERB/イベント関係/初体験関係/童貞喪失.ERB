				TEMP_STR += @"（『接待』客）"
			CASEELSE
		ENDSELECT
	ELSEIF CFLAG:CHARA_NO:童貞喪失相手 < 0		
		SELECTCASE CFLAG:CHARA_NO:童貞喪失相手
			CASE 初相手_不明
				TEMP_STR += @"覚えていない誰か"
			CASE 初相手_夫
				TEMP_STR += @"夫"
			CASE 初相手_バイブ
				TEMP_STR += @"バイブ"
			CASE 初相手_極太バイブ
				TEMP_STR += @"極太バイブ"
			CASE 初相手_犬
				TEMP_STR += @"犬"
			CASE 初相手_触手
				TEMP_STR += @"触手生物"
			CASE 初相手_元彼
				TEMP_STR += @"元カレ"
			CASE 初相手_今彼
				TEMP_STR += @"カレシ"
			CASE 初相手_セフレ
				TEMP_STR += @"セフレ"
			CASE 初相手_スタッフ
				IF CSTR:CHARA_NO:童貞喪失相手 == "？？？"
					TEMP_STR += @"スタッフ"
				ELSE
					TEMP_STR += @"元スタッフ"
				ENDIF
			CASE 初相手_不良
				TEMP_STR += @"不良"
			CASE 初相手_枕営業
				TEMP_STR += @"枕営業のお相手"
			CASE 初相手_売春客男
				TEMP_STR += @"売春で名前も知らない男性客"
			CASE 初相手_売春客女
				TEMP_STR += @"売春で名前も知らない女性客"
			CASE 初相手_痴漢
				TEMP_STR += @"痴漢"
			CASE 初相手_接待客
				TEMP_STR += @"『接待』客"
			CASEELSE
		ENDSELECT
	ENDIF
	
	STRLENS TEMP_STR
	IF RESULT && CFLAG:CHARA_NO:童貞喪失状況
		SELECTCASE CFLAG:CHARA_NO:童貞喪失状況
			CASE 初状況_指導
				TEMP_STR += @"指導中に"
			CASE 初状況_撮影
				TEMP_STR += @"撮影中に"
			CASE 初状況_ハメ撮
				TEMP_STR += @"にハメ撮りされながら"
			CASE 初状況_無理犯
				TEMP_STR += @"に無理やり犯されて"
			CASE 初状況_輪姦
				TEMP_STR += @"に輪姦されて"
			CASE 初状況_クスリ
				TEMP_STR += @"にクスリをキめさせられ、自ら%CSTR:CHARA_NO:男性器呼び方%をおねだり"
			CASE 初状況_夜這
				TEMP_STR += @"に夜這いをかけて"
			CASE 初状況_売春
				TEMP_STR += @"に売春で犯されて"
			CASE 初状況_奴隷接待
				TEMP_STR += @"に奴隷接待で犯されて"
			CASE 初状況_乱交
				TEMP_STR += @"に乱交で犯されて"
			CASE 初状況_ストリップ
				TEMP_STR += @"にストリップで犯されて"
			CASE 初状況_夜這
				TEMP_STR += @"にオークションで競り落とされて"
			CASEELSE
		ENDSELECT
	ELSEIF RESULT && !CFLAG:CHARA_NO:童貞喪失状況
		TEMP_STR += @"と"
	ENDIF

[IF_DEBUG]
DEBUGPRINTFORML %TEMP_STR%
