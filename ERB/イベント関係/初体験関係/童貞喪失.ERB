#DIM PLAYER_ID
#DIM AGE
#DIM MONTH
#DIM DAY_
#DIM LOCATION
#DIM TYPE
#DIMS NAME_STRING

SIF CFLAG:CHARA_NO:童貞喪失相手
	RETURN

CFLAG:CHARA_NO:童貞喪失相手 = PLAYER_ID
