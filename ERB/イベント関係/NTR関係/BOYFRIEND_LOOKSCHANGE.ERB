;===========================================================
;見た目変更呼び出し
;===========================================================
@EVENT_LOOKSCHANGE(ARG)

LOCAL = RAND:100
SIF TALENT:ARG:影響されやすい == 1 || TALENT:ARG:ニート == 1
	LOCAL = 100
SIF LOCAL >= 80
	CALL EVENT_LOOKSCHANGE_DETAIL(ARG)

;===========================================================
;見た目変更表示
;===========================================================
@EVENT_LOOKSCHANGE_DETAIL(ARG)
TRYCALLFORM PERSONAL_CHANGE_{CFLAG:ARG:彼氏タイプ}(ARG)
