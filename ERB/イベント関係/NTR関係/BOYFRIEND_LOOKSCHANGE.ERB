;===========================================================
;見た目変更呼び出し
;===========================================================
@EVENT_LOOKSCHANGE

VARSET TCVAR, 0
REPEAT CHARANUM
	IF COUNT == 0
		CONTINUE
	ELSEIF TALENT:COUNT:彼氏あり == 1
		IF TALENT:COUNT:影響されやすい == 0 && EXP:COUNT:イメチェン回数 >= 9
			CONTINUE
		ELSEIF EXP:COUNT:イメチェン回数 >= 11
			CONTINUE
		ELSEIF CFLAG:COUNT:彼氏の種類 != 0
			CONTINUE
		ELSEIF CFLAG:COUNT:入寮中 == 1 && (FLAG:女子寮拡張 & 128)
			CONTINUE
		ELSE
			LOCAL = RAND:100
			SIF TALENT:COUNT:影響されやすい == 1 || TALENT:COUNT:ニート == 1
				LOCAL = 100
			SIF LOCAL >= 80
				CALL EVENT_LOOKSCHANGE_DETAIL
				VARSET TCVAR, 0
			LOCAL = 0
		ENDIF
	ENDIF
REND

;===========================================================
;見た目変更表示
;===========================================================
@EVENT_LOOKSCHANGE_DETAIL

TARGET = COUNT
LOCAL = CFLAG:彼氏の種類
VARSET TCVAR, 0

PRINTFORMW 休み明けの月曜日、事務所にやってきた%NAME:TARGET%に%CALLNAME:MASTER%は違和感を覚えた……
PRINTFORM %CALLNAME:TARGET%を注意深く観察してみると、

CALLFORM PARSONAL_CHANGE

PRINTFORML が違和感の原因だった
PRINTFORML %CALLNAME:TARGET%に話を聞くと、付き合っている彼氏の%CSTR:彼氏姓%の好みに合わせたものらしい
PRINTFORM %CALLNAME:TARGET%は%CALLNAME:MASTER%に似合っているかどうか尋ねてきたが、あなたはどう返答していいものか分からず
PRINTFORML 言葉に詰まってしまった……

EXP:イメチェン回数 += 1

VARSET LOCAL:3
FOR LOCAL:3, 0 ,90
	IF TCVAR:(LOCAL:3)
		; 経験値の加算処理
		; 経験名が定義されているのみ加算処理を行う
		IF STRLENS(EXPNAME:(LOCAL:3)) > 0
			EXP:(LOCAL:3) += TCVAR:(LOCAL:3)
		ELSE
			DEBUGPRINTFORML EXP:{(LOCAL:3)}は定義されていないため加算処理をスキップします
		ENDIF
			SIF TCVAR:(LOCAL:3) != 101
				PRINTFORML %EXPNAME:(LOCAL:3)% + {TCVAR:(LOCAL:3)}
	ENDIF
NEXT

VARSET TCVAR
WAIT
DRAWLINE


