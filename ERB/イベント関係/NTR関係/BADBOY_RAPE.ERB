		LOCAL = RAND:100
		LOCAL -= ABL:COUNT:運動能力
		IF TALENT:COUNT:臆病
			LOCAL += RAND:10
		ENDIF
		IF IS_大人しい(COUNT)
			LOCAL += RAND:10
		ENDIF
		IF IS_貞操無頓着(COUNT)
			LOCAL += RAND:10
		ENDIF
		IF TALENT:COUNT:淫乱
			LOCAL += RAND:10
		ENDIF
		IF TALENT:COUNT:妊娠
			LOCAL += RAND:10
		ENDIF
		IF TALENT:COUNT:気丈
			LOCAL -= RAND:5
		ENDIF
		IF  IS_活発(COUNT)
			LOCAL -= RAND:5
		ENDIF
		IF TALENT:COUNT:目立ちたがり
			LOCAL -= RAND:5
		ENDIF
		IF TALENT:COUNT:ボーイッシュ
			LOCAL -= RAND:5
		ENDIF
		IF TALENT:COUNT:男性不信
			LOCAL -= RAND:5
		ENDIF
		IF TALENT:COUNT:カリスマ
			LOCAL -= RAND:5
		ENDIF
		LOCAL += 10 * FLAG:治安悪化レベル
		IF LOCAL >= 98 && FLAG:治安巡回 == 0
			CALL BADBOY_RAPE(COUNT)
			FLAG:治安悪化 += RAND:5 + 1
		ELSE
			LOCAL = 0
		ENDIF
	ENDIF
	LOCAL = 0
REND

