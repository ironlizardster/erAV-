;===========================================================
;BFによる経験
;===========================================================
@EVENT_BF経験(ARG)

VARSET GOTJUEL:ARG:快Ｃ
VARSET TCVAR:ARG:Ｖ経験
LOCAL = RAND:3
SIF CFLAG:ARG:ラブホ == 1
	LOCAL = 0
IF LOCAL <= 1
	TRYCALLFORM BF_COMMONEV_{LOCAL}(ARG)
ELSE
;彼氏タイプでイベント番号ごとに違う展開にしたり確率つけたりする
	IF EXISTFUNCTION(@"BOYFRIEND_EVENT_COUNT_{CFLAG:ARG:彼氏タイプ}") == 2
		CALLFORMF BOYFRIEND_EVENT_COUNT_{CFLAG:ARG:彼氏タイプ}
		SIF RESULT > 0
			LOCAL:1 = RAND:RESULT
		;イベント番号に対応する関数がない場合はBF_COMMONEV_0になる
		TRYCCALLFORM BF_EV{CFLAG:ARG:彼氏タイプ}_{LOCAL:1}(ARG)
		CATCH
			TRYCALL BF_COMMONEV_0(ARG)
		ENDCATCH
	ELSE
		TRYCALL BF_COMMONEV_0(ARG)
	ENDIF
ENDIF

IF SUMARRAY(GOTJUEL:ARG:快Ｃ) || SUMARRAY(TCVAR:ARG:Ｖ経験)
	SIF SUMARRAY(GOTJUEL:ARG:快Ｃ)
		CALL ADD_JUEL(ARG)

	SIF SUMARRAY(TCVAR:ARG:Ｖ経験)
		CALL ADD_EXP(ARG)

	DRAWLINE
	WAIT
ENDIF

