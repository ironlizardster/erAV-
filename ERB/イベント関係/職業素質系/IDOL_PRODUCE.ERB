	IF TALENT:LOCAL:オリジナルユニット == 0
		CONTINUE
	ELSE
		SIF RELATION:LOCAL:ARG <= 300
			RELATION:LOCAL:ARG = 300
		SIF RELATION:ARG:LOCAL <= 300
			RELATION:ARG:LOCAL = 300
	ENDIF
NEXT 

