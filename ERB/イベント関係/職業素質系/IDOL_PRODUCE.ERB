@IDOL_PRODUCE_CALC

;月初めのみ
SIF DAY:日付_日 > 1 
	RETURN

A = 0
B = 0

REPEAT CHARANUM
	IF COUNT == 0
		CONTINUE
	;既にユニット所属またはソロで確固たる地歩のある者の除外
	ELSEIF SKIP_ADD_ORIGINAL(COUNT)
		CONTINUE
	ELSEIF TALENT:COUNT:アイドル == 1
		A += 1
		SIF B == 0
			B = COUNT
	ENDIF
REND

IF A >= 4 && MONEY >= 10000000
	CALL IDOL_PRODUCE
ENDIF

