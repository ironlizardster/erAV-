IF ABL:信頼 <= 3
	B += 5
ELSEIF ABL:信頼 == 4
	B += 10
ELSEIF ABL:信頼 == 5
	B += 20
ELSEIF ABL:信頼 == 6
	B += 25
ELSEIF ABL:信頼 == 7
	B += 30
ELSEIF ABL:信頼 == 8
	B += 35
ELSEIF ABL:信頼 == 9
	B += 45
ELSEIF ABL:信頼 >= 10
	B += 50
ENDIF

;欲望
IF ABL:欲望 <= 3
	B += 10
ELSEIF ABL:欲望 == 4
	B += 20
ELSEIF ABL:欲望 == 5
	B += 30
ELSEIF ABL:欲望 == 6
	B += 50
ELSEIF ABL:欲望 == 7
	B += 70
ELSEIF ABL:欲望 == 8
	B += 90
ELSEIF ABL:欲望 == 9
	B += 120
ELSEIF ABL:欲望 >= 10
	B += 150
ENDIF

;話術：会話営業だった場合通常よりも多く加算
IF CFLAG:営業内容 == 1
	IF ABL:話術 == 1
		B += 10
	ELSEIF ABL:話術 == 2
		B += 20
	ELSEIF ABL:話術 == 3
		B += 40
	ELSEIF ABL:話術 == 4
		B += 70
	ELSEIF ABL:話術 == 5
		B += 100
	ELSEIF ABL:話術 >= 6
		B += 150
	ENDIF
ELSE
	IF ABL:話術 == 1
		B += 5
	ELSEIF ABL:話術 == 2
		B += 10
	ELSEIF ABL:話術 == 3
		B += 20
	ELSEIF ABL:話術 == 4
		B += 35
	ELSEIF ABL:話術 == 5
		B += 50
	ELSEIF ABL:話術 >= 6
		B += 75
	ENDIF
ENDIF

;奉仕精神：出張営業だった場合通常よりも多く加算
IF CFLAG:営業内容 == 6
	IF ABL:奉仕精神 == 1
		B += 15
	ELSEIF ABL:奉仕精神 == 2
		B += 30
	ELSEIF ABL:奉仕精神 == 3
		B += 60
	ELSEIF ABL:奉仕精神 == 4
		B += 105
	ELSEIF ABL:奉仕精神 == 5
		B += 150
	ELSEIF ABL:奉仕精神 >= 6
		B += 225
	ENDIF
ELSE
	IF ABL:奉仕精神 == 1
		B += 10
	ELSEIF ABL:奉仕精神 == 2
		B += 20
	ELSEIF ABL:奉仕精神 == 3
		B += 40
	ELSEIF ABL:奉仕精神 == 4
		B += 70
	ELSEIF ABL:奉仕精神 == 5
		B += 100
	ELSEIF ABL:奉仕精神 >= 6
		B += 150
	ENDIF
ENDIF

;奉仕営業だった場合、奉仕技術に応じて加算
IF CFLAG:営業内容 == 2 || CFLAG:営業内容 == 7
	IF ABL:奉仕技術 == 1
		B += 15
	ELSEIF ABL:奉仕技術 == 2
		B += 25
	ELSEIF ABL:奉仕技術 == 3
		B += 40
	ELSEIF ABL:奉仕技術 == 4
		B += 60
	ELSEIF ABL:奉仕技術 == 5
		B += 75
	ELSEIF ABL:奉仕技術 >= 6
		B += 100
	ENDIF
ENDIF

;ＡorＶ営業だった場合、性交技術に応じて加算
IF CFLAG:営業内容 == 3 || CFLAG:営業内容 == 4
	IF ABL:性交技術 == 1
		B += 30
	ELSEIF ABL:性交技術 == 2
		B += 50
	ELSEIF ABL:性交技術 == 3
		B += 75
	ELSEIF ABL:性交技術 == 4
		B += 100
	ELSEIF ABL:性交技術 == 5
		B += 150
	ELSEIF ABL:性交技術 >= 6
		B += 200
	ENDIF
ENDIF

;ＳＭ営業だった場合、サドっ気orマゾっ気に応じて加算（高い方を判定）
IF CFLAG:営業内容 == 5
	IF ABL:サドっ気 >= ABL:マゾっ気
		IF ABL:サドっ気 == 1
			B += 15
		ELSEIF ABL:サドっ気 == 2
			B += 25
		ELSEIF ABL:サドっ気 == 3
			B += 40
		ELSEIF ABL:サドっ気 == 4
			B += 60
		ELSEIF ABL:サドっ気 == 5
			B += 75
		ELSEIF ABL:サドっ気 >= 6
			B += 100
		ENDIF
	ELSEIF ABL:マゾっ気 > ABL:サドっ気
		IF ABL:マゾっ気 == 1
			B += 15
		ELSEIF ABL:マゾっ気 == 2
			B += 25
		ELSEIF ABL:マゾっ気 == 3
			B += 40
		ELSEIF ABL:マゾっ気 == 4
			B += 60
		ELSEIF ABL:マゾっ気 == 5
			B += 75
		ELSEIF ABL:マゾっ気 >= 6
			B += 100
		ENDIF
	ENDIF
ENDIF

;素質ボーナス
;淫乱
SIF TALENT:淫乱
	B += 20
;魅力
SIF TALENT:魅力
	B += 40
;魅惑
SIF TALENT:魅惑
	B += 40
;謎の魅力
SIF TALENT:謎の魅力
	B += 75
;人気者
SIF TALENT:人気者
	B += 35
;巨乳か貧乳
SIF TALENT:巨乳 || TALENT:貧乳
	B += 25
;ふたなり
SIF TALENT:ふたなり
	B += 15
;小柄体系
SIF TALENT:小柄
	B += 25
;アイドル
SIF TALENT:アイドル
	B += 50

;HoX pre2にて、ビデオバリアントなのに！という声に応えてざっくり切り下げ
B /= 10

