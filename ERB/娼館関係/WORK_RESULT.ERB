	TIMES B , 0.50
ELSEIF A == 1
	TIMES B , 1.00
ELSEIF A == 2
	TIMES B , 1.00
ELSEIF A == 3
	TIMES B , 1.20
ELSEIF A == 4
	TIMES B , 1.30
ENDIF



IF (FLAG:指導テキスト設定 & 2) == 0
