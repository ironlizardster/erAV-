;=================================================
; シーン経験増加処理
;--------------------------------------------
; シーンの経験増加処理を行います
;=================================================
@SCENE_EXP_10

VARSET LOCAL, 0

LOCAL = (1 + RAND:5)
LOCAL += ABL:マゾっ気
SIF TALENT:淫乱
	TIMES LOCAL , 1.25

TCVAR:緊縛経験 += LOCAL

IF P:4 != 0 && ABL:マゾっ気 != 0
	LOCAL:1 += ABL:マゾっ気
	SIF TALENT:淫乱
		TIMES LOCAL , 1.50
	SIF ABL:Ｃ感覚 >= LOCAL
		LOCAL:1 = LOCAL
	TCVAR:被虐快楽経験 += LOCAL:1
ENDIF